/* pages/resume/upload/index.wxss */

.container {
  background: #fff;
}

.tips-text {
  padding: 40rpx 24rpx;
  background: #fff;
  line-height: 1.5;
}

.tips-text .title {
  margin-bottom: 24rpx;
  font-size: 30rpx;
  color: #9c9c9c;
  text-align: center;
}

.img-list-wrap {
  width: 100%;
  padding: 24rpx;
}

.img-list-wrap .img {
  box-sizing: border-box;
  width: 256rpx;
  height: 256rpx;
  padding: 12rpx;
  border: 1px solid #ddd;
}

.img-list-wrap .add-btn {
  display: inline-block;
  width: 256rpx;
  height: 256rpx;
  padding: 12rpx;
  border: 1px solid #ddd;
  color: #9c9c9c;
}

.img-list-wrap .add-btn .img {
  margin: 12rpx 0;
  width: 128rpx;
  height: 128rpx;
  padding: 12rpx;
  filter: grayscale(100);
  opacity: 0.3;
  border: 0;
}

.img-list {
  display: flex;
  width: auto;
}

.img-list-wrap .item {
  display: inline-block;
  margin-bottom:48rpx;
  width: 50%;
  text-align: center;
  vertical-align: middle;
}

.f-strong {
  margin:0 6rpx;
  font-weight: bold;
  color: #222;
}
