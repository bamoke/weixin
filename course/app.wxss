/**app.wxss**/
@import "wxParse/wxParse.wxss";
view {box-sizing: border-box;}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 1.75;
  background-color: #f0efef;
}
.g-row-bt {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.g-pad-box {padding:24rpx;}
/**module**/

.m-column-list {
  box-sizing: border-box;
  padding: 0 20rpx 40rpx;
  width: 100%;
  background-color: #fff;
}

.m-column-list .item {
  display: -webkit-flex;
  padding: 20rpx 0;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
}

.m-column-list .item .thumb {
  flex-shrink: 0;
  width: 200rpx;
  height: 120rpx;
  border-radius:6rpx;
}

.m-column-list .item .info {
  flex-shrink: 1;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding-left: 20rpx;
  width: 100%;
  height: 120rpx;
}

.m-column-list .item .info .title {
  font-size: 28rpx;
  display: block;
  color: #121212;
  line-height: 1.2;
}

.m-column-list .item .info .desc {
  display: block;
  width: 100%;
  color: #999;
}

.m-column-list .item .bd {
  display: block;
  width: 80%;
}

.m-column-list .item .ft {
  display: -webkit-flex;
  justify-content: space-between;
  align-items: flex-end;
  line-height: 1.2;
  color: #999;
  font-size: 24rpx;
}

.m-column-list .item .ft .total text {
  margin-right: 20rpx;
}

.m-column-list .item .ft .price {
  color: #e53d3a;
  font-size: 28rpx;
}

.free {
