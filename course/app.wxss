}

.m-comment {
  padding: 20rpx 0 40rpx;
  width: 100%;
  background-color: #fff;
}

.m-comment .bar {
  text-align: center;
  position: relative;
}

.m-comment .bar .caption {
  display: inline-block;
  border-bottom: 6rpx solid #ddd;
  font-size: 32rpx;
  color: #666;
}

.m-comment .bar .create-btn {
  position: absolute;
  right: 24rpx;
  top: 8rpx;
  z-index: 1;
  color: #28bfc6;
  font-size:28rpx;
}

.m-comment .bar .create-btn:before {
  content: "";
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  background: url('http://www.xinzhinetwork.com/Upload/weicon/brush.png') no-repeat center;
  background-size: contain;
}

.m-commnet-list {
  padding: 20rpx;
}

.m-commnet-list .item {
  display: -webkit-flex;
  box-sizing: border-box;
  padding: 20rpx 0;
  width: 100%;
  border-bottom: 2rpx solid #eee;
}

.m-commnet-list .item .avatar {
  flex-grow: 0;
  flex-shrink: 0;
  flex-basis: content;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.m-commnet-list .item .bd {
  flex-grow: 0;
  flex-shrink: 1;
  box-sizing: border-box;
  padding-left: 20rpx;
  width: 100%;
  font-size: 28rpx;
  color:#666;
}

.m-commnet-list .item .bd .top {
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  color: #999;
  line-height: 1.2;
}
.m-commnet-list .item .bd .top .nickname {
  flex-grow: 0;
  width:50%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.m-commnet-list .item .time {
  font-size: 22rpx;
}
.m-commnet-list .item .bd .reply {
  box-sizing:border-box;
  padding:12rpx;
  width:100%;
  background:#f8f8f8;
  color:#666;
}
.m-commnet-list .item .bd .reply .heading {color:#999;}

.m-horizontal-nav {
  display: -webkit-flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  background-color: #fff;
}

.m-horizontal-nav .item {
  padding: 32rpx 0;
  width: 25%;
  text-align: center;
}

.m-horizontal-nav .item .icon {
  display: inline-block;
  width: 64rpx;
  height: 64rpx;
  border-radius: 10%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 48rpx auto;
}
.m-horizontal-nav .item .icon .img {
  width:64rpx;
  height:64rpx;
}
.m-horizontal-nav .item .icon-course {
  background-color: #c1d70c;
}

.m-horizontal-nav .item .icon-column {
  background-color: #ffa11d;
}

.m-horizontal-nav .item .icon-knowledge {
  background-color: #20cc84;
}

.m-horizontal-nav .item .icon-test {
  background-color: #1dadff;
}
.m-horizontal-nav .item .icon-booking {
  background-color: #09dcdf;
}

.m-test-list .item {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.m-test-list .item .title {
  flex-shrink: 1;
  width: 70%;
  line-height: 1.5;
}

.m-test-list .item .total {
  flex-shrink: 0;
  text-align: center;
  color: #999;
  line-height: 1.5;
  font-size: 24rpx;
}

.m-test-list .item .total .num {
  color: #666;
}

.m-empty-box {
  padding: 40rpx;
  text-align: center;
}

.m-empty-box .tips {
  font-size: 32rpx;
  color: #999;
}
.m-form {
  width: 100%;
}

.m-form .form-group {
  display: flex;
  justify-content: space-between;
  padding: 12px;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
}
.m-form .input-box {
  padding: 24rpx;
  width: 100%;
  background-color: #eee;
}

.m-form .error-box {
  padding:24rpx;
  background-color:#fff;
  color:#ff5b57;
}


/* skin  */

.s-c-import {
  color: #b20f00;
}

.s-bg-minor {
  background-color: #28c0c6;
}

.s-bg-import {
  background-color: #ff5b57;
}

.text-success {
  color: #3ee7a1;
}

.text-danger {
  color: #e53d3a;
}

/*  unit  */

.u-more-btn {
  margin-top: 40rpx;
  border: 2rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #999;
}
.btn {}
.btn-import {
  color: #fff;
  background-color: #ff5b57;
}

.btn-minor,.btn-primary {
  color: #fff;
  background-color: #28c0c6;
}
.u-gift {
  width:200rpx;
  background: #fff;
  color: #28c0c6;
  text-align: center;
}
.u-gift .icon {
  display: inline-block;
  width:48rpx;
  height:48rpx;
  background:url("http://www.xinzhinetwork.com/Upload/weicon/gift.png") no-repeat center;
  background-size:contain;
}
.u-gift .text {
  white-space: nowrap;
  font-size:24rpx;
}
.u-collection {
  width:48rpx;
  height:48rpx;
  background-image:url(http://www.xinzhinetwork.com/Upload/weicon/collection.png);
  background-size:contain;
  background-repeat: no-repeat;
}
.collection-active {
  background-image:url(http://www.xinzhinetwork.com/Upload/weicon/collection_fill.png);
}

/**func**/

.f-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.f-text-strong {
  font-weight: bold;
}
.f-align-top {align-items: flex-start;}
