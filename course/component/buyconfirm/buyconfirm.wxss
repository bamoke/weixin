/* component/buyconfirm/buyconfirm.wxss */
.bc-container {
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  z-index: 99;
  box-sizing: border-box;
  padding:24rpx;
  margin:24rpx;
  background-color:#fff;
  font-size:26rpx;
  border-radius:12rpx;
}
.bc-container .row {
display: flex;
justify-content:space-between;
padding:24rpx 0;
border-bottom:1px solid #eee;
}
.bc-container .title {
  font-size:32rpx;
}
.bc-container .btn {
  margin-top:24rpx;
  color: #fff;
  background-color: #28c0c6;
}
.price{
  color:#b20f00;
  font-size:32rpx;
}
.masker {
  position:fixed;
  left:0;
  right:0;
  top:0;
  bottom: 0;
   z-index:98; 
  background-color:rgba(0,0,0,.5);
}