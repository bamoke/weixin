/* pages/home/mycomment/index.wxss */

.m-mycomment {
  width: 100%;
}

.m-mycomment .list {
  box-sizing: border-box;
  margin-bottom: 24rpx;
  padding: 24rpx;
  width: 100%;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.m-mycomment .list:last-child {
  margin-bottom: 0;
}

.m-mycomment .list .title {
  color: #999;
}

.m-mycomment .list .title text {
  margin: 0 10rpx;
  color: #333;
  font-size: 30rpx;
}

.m-mycomment .list .comment-content {
  position: relative;
  margin: 12rpx 0;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  color: #666;
  overflow:  visible;
}

.m-mycomment .list .comment-content .arrow-icon {
  display: block;
  position: absolute;
  top: -48rpx;
  left: 24rpx;
  z-index: 99;
  width: 0;
  height: 0;
  border: 24rpx solid #f5f5f5;
  border-left-color: transparent;
  border-top-color: transparent;
  border-right-color: transparent;
}

.m-mycomment .list .footer {
  font-size: 22rpx;
  color: #999;
}
