/* pages/test/index.wxss */

.m-total {
  
  display: flex;
  flex-direction:column;
  justify-content: space-around;
  width: 100%;
  height:400rpx;
  margin-bottom: 24rpx;
  color: #fff;
  text-align: center;
}
.m-total .top-info .num {
  display: inline-block;
  width:160rpx;
  height:160rpx;
  line-height: 160rpx;
  border-radius:50%;
  border:3px solid #fff;
  font-size:72rpx;
  font-weight: bold;
}
.m-total .bottom-info {
  display: flex;
  justify-content: space-around;
}
.m-total .bottom-info .item {
  text-align: center;

}

.m-total .bottom-info .item .num {
  font-weight: bold;
}

.m-nav {
  display: flex;
  flex-wrap: wrap;
  padding: 24rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
}

.m-nav .item {
  text-align: center;
  box-sizing: border-box;
  width: 50%;
  padding: 0 12rpx;
  height: 200rpx;
  line-height: 200rpx;
  font-size: 32rpx;
  color:#fff;
}
.m-nav .item:nth-child(1){
  background-color:#dc814a;
}
.m-nav .item:nth-child(2){
  background-color:#4ab8dc;
}
.m-nav .item:nth-child(3){
  background-color:#46dba1;
}
.m-nav .item:nth-child(4){
  background-color:#6f64bc;
}
