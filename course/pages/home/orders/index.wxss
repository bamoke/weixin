/* pages/order/index.wxss */
.m-order-list {
  width:100%;
}
.m-order-list .item {
  margin-bottom:20rpx;
  border-top:1px solid #dedede;
  border-bottom:1px solid #dedede;
  background-color: #fff;
}
.m-order-list .item .tp,.m-order-list .item .ft {
  box-sizing:border-box;
}
.m-order-list .item .tp {
  padding:0 24rpx;
  width:100%;
  height:80rpx;
}
.m-order-list .item .bd {
  width:100%;
  border-top:1px solid #eee;
}
.m-order-list .item .ft {
  box-sizing: border-box;
  padding:24rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.m-order-list .item .ft .total {

  height:60rpx;
  line-height: 60rpx;
  white-space: nowrap;
  }
.m-order-list .item .ft .operator {
  flex-shrink: 1;
  width:70%;
text-align: right;
}
.m-order-list .item .ft .operator button {
  display: inline-block;
  margin-left:20rpx;
}
.m-order-list .item .ft .price {color:#e53d3a;font-size:32rpx;}

.pro-list {
  display: -webkit-flex;
  justify-content: space-between;
  box-sizing:border-box;
  padding:20rpx 24rpx;
  width: 100%;
  border-bottom:1px solid #f5f5f5;
}
.pro-list .thumb {
  flex-shrink: 0;
  margin-right:20rpx;
  width:200rpx;
  height:120rpx;
}
.pro-list .middle {
  flex-shrink: 1;
  width:100%;
}
.pro-list .right {
  flex-shrink: 0;
  width:160rpx;
  text-align: right;
}
.pro-list .name {line-height: 1.3;font-size:28rpx;}
.pro-list .num {margin-top:20rpx;color:#999;}
.pro-list .price {
  font-weight:bolder;
}
.f-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}