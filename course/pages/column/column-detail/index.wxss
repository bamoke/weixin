/* pages/column/column-detail/index.wxss */
.u-cover {
  width:100%;
  height:280rpx;
}
.m-description {
  display: block;
  box-sizing:border-box;
  margin-bottom:20rpx;
  padding:20rpx;
  width:100%;
  background-color:#fff;
}
.m-description .title {
  display:block;
  font-size:36rpx;
  color:#333;
  line-height:1.2;
}
.m-description .desc {
  color:#666;
  font-size:28rpx;
}
.m-description .ft {
  display: -webkit-flex;
  justify-content: space-between;
  align-items:flex-end;
  margin-top:10rpx;
  color:#999;
  font-size:24rpx;
}
.m-description .ft .fg {
  margin:0 20rpx;
}
.m-description .ft .price {
  font-size:30rpx;
  color:#c00;
}
.m-column-wrap {
  margin-bottom:20rpx;
  width:100%;
  background-color:#fff;
}
.m-column-wrap .bar {
  display: -webkit-flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom:30rpx;
  height:90rpx;
  text-align:center;
}
.m-column-wrap .bar .caption{
  display:inline-block;
  font-size:32rpx;
  color:#666;
  border-bottom:6rpx solid #bfbfbf;
  
}
.m-column-wrap .content {padding:0 20rpx 40rpx;font-size:28rpx;text-indent: 1em;color:#454545;}

.m-teacher {margin-bottom:20rpx;text-align:center;}
.m-teacher .avatar {
  display: inline-block;
  width:160rpx;
  height:160rpx;
  border-radius:50%;
}
.m-teacher .name {
  display: block;
  font-size:36rpx;
  color:#333;
}
.m-teacher .position {
  font-size:32rpx;
  color:#666;
}
.m-btn-box {
  display:-webkit-flex;
  justify-content:space-between;
  box-sizing:border-box;
  padding:20rpx;
  width:100%;
  background-color:#fff;
}
.m-btn-box .btn {
  width:100%;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  color:#fff;
  border-radius:8rpx;
  font-size:36rpx;
}
.tips,.u-btn {margin-top:24rpx;}
