/* pages/course/index/index.wxss */
.m-category {
  width:100%;
  height:86rpx;
  overflow:hidden;
  white-space: nowrap;
  background-color:#28bfc6;
  box-shadow: 0 4rpx 4rpx rgba(0,0,0,.2);
}
.m-category .wrap {
  display: inline-block;
  height:50rpx;
  border-bottom:2rpx solid #ddd;
}

.m-category .item {
  display: inline-block;
  padding:0 24rpx;
  padding-top:6rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  white-space: nowrap;
  color:#a3eef1;
  font-size:28rpx;
}
.m-category .active {
  color:#fff;
  border-bottom:6rpx solid #fff;
}