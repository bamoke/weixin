/* pages/test/index.wxss */

.u-banner {width:100%;}
.u-banner .img {width:100%;height:320rpx;}

.m-nav {
  display: flex;

  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
}

.m-nav .item {
  text-align: center;
  box-sizing: border-box;
  width: 34%;
  padding: 0 12rpx;
  height: 160rpx;
  line-height: 160rpx;
  font-size: 32rpx;
  color:#fff;
}
.m-nav .item:nth-child(1){
  background-color:#dc814a;
}
.m-nav .item:nth-child(2){
  background-color:#4ab8dc;
}
.m-nav .item:nth-child(3){
  background-color:#46dba1;
}
.m-nav .item:nth-child(4){
  background-color:#6f64bc;
}
.m-recommend {
  width:100%;
}
.m-recommend .bar {
  display:-webkit-flex;
justify-content:center;
align-items:flex-end;
margin-top:24rpx;
height:90rpx;
text-align:center;
background-color:#fff;
border-bottom:1rpx solid #bfbfbf;
}
.m-recommend .bar .caption {
  display:inline-block;
font-size:32rpx;
color:#28c0c6;
border-bottom:6rpx solid #28c0c6;

}
