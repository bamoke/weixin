/**app.wxss**/

view {
  box-sizing: border-box;
}

page {
  height: 100%;
}

.container {
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
}

.g-box-pad {
  padding: 24rpx;
}

.g-row {
  display: flex;
  width: 100%;
}

.g-row-justify-bt {
  justify-content: space-between;
}

.row-align-center {
  align-items: center;
}

/**module**/

.m-top-search-primary {
  padding: 12rpx 24rpx 24rpx;
  background: #1b81d3;
}

.m-top-search-primary .search-bg {
  position: relative;
  padding-right: 24rpx;
  height: 64rpx;
  border-radius: 6rpx;
  background-color: #fff;
  font-size: 24rpx;
}

.m-top-search-primary .input-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.m-top-search-primary .input-box .input {
  flex-shrink: 1;
  flex-grow: 1;
  display: block;
  box-sizing: border-box;
  padding: 0 24rpx;
  width: 100%;
  height: 100%;
}

.m-top-search-primary .input-box .clear-btn {
  flex-shrink: 0;
  flex-grow: 0;
  width: 24rpx;
  height: 24rpx;
}

.m-top-search-primary .tips-box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  text-align: center;
  height: 100%;
  color:#999;
}

.m-top-search-primary .tips-box .icon {
  margin-right: 12rpx;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  opacity: .5;
}


.m-tips-page {
  padding-top: 120rpx;
  align-items: center;
  width: 100%;
  height: 100%;
  text-align: center;
}

.m-tips-page .icon {
  width: 180rpx;
  height: 180rpx;
}

.m-tips-page .tips {
  margin: 20rpx 0 80rpx;
  font-size: 34rpx;
}

.m-paging-wrap {
}

.m-paging-wrap .row {
  padding: 40rpx 0;
  text-align: center;
}

.m-paging-wrap .no-more {
  color: #ccc;
  background: #f7f7f7;
}

.tips-page-empty .tips {
  color: #9c9c9c;
}

.tips-page-success .tips {
  color: #25b87b;
}

/***util***/

.u-ht {
  height: 24rpx;
  background: #f4f4f4;
}

.ht-border {
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
}

.u-myicon {
  display: inline-block;
  margin-right: 6rpx;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  opacity: 0.5;
}

.myicon-big {
  width: 48rpx;
  height: 48rpx;
}

/**component***/

.btn {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  border-radius: 6rpx;
  text-align: center;
  word-spacing: 4rpx;
  letter-spacing: 0.5em;
}

.btn-small {
  height: 60rpx;
  line-height: 60rpx;
}

.btn-inline {
  display: inline-block;
  padding: 0 24rpx;
}

.btn-block {
  display: block;
  width: 100%;
}

.btn-primary {
  background: #1b81d3;
  color: #fff;
}

.btn-success {
  background: #25b87b;
  color: #fff;
}

.btn-default {
  background: #ddd;
  /* color: #6c6c6c; */
  border: 1px solid #eee;
}

.text-primary {
  color: #1b81d3;
}

.text-info {
  color: #1b81d3;
}

.text-success {
  color: #25b87b;
}

.text-error {
  color: #f30;
}

.text-warning {
  color: #f90;
}

.text-lightgrey {
  color: #cecece !important;
}

/***/

.f-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.f-transparent {
  opacity: 0;
}

.f-transparent-1 {
  opacity: 0.1;
}

.f-transparent-5 {
  opacity: 0.5;
}

.f-mar-b-24 {
  margin-bottom: 24rpx;
}

.f-mar-b-36 {
  margin-bottom: 36rpx;
}

.f-mar-b-48 {
  margin-bottom: 48rpx;
}

/******/

.m-test .item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 24rpx 0;
  border-radius: 4px;
  background: #fff;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.m-test .item .main-box {
  flex-grow: 1;
  padding: 0 24rpx;
  border-right: 1px solid #f1f1f1;
}

.m-test .item .total-box {
  width: 180rpx;
  flex-shrink: 0;
  flex-grow: 0;
  text-align: center;
  font-size: 24rpx;
}

.m-test .item .total-box .nu {
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #1b81d3;
  font-weight: bold;
  opacity: 0.6;
}

.m-test .item {
  color: #999;
}

.m-test .item .title {
  margin-bottom: 24rpx;
  font-size: 32rpx;
  color: #121212;
}
