/* pages/article/list/index.wxss */
.container {
  background:#f8f8f8;
}
.m-article-list .item {
  display: flex;
  justify-content:space-between;
  align-items:center;
  padding:24rpx;
  margin-bottom:24rpx;
  background:#fff;
  border-top:1px solid #f1f1f1;
  border-bottom:1px solid #f1f1f1;
}
.m-article-list .item .arrow {
  flex-shrink: 0;
  flex-grow:0;
  width:32rpx;
  height: 32rpx;
  opacity: .2;
}
.m-article-list .item .main-box {
  padding-right:24rpx;
  width:100%;
  flex-shrink: 1;
  flex-grow: 1;
}
.m-article-list .item .title {
  margin-bottom:24rpx;
  font-size:34rpx;
}
.m-article-list .item .other {
  font-size:24rpx;
  color:#999;
}
.m-article-list .item .other .unit {margin-right:24rpx;}