/**index.wxss**/
page {height:100%;}
.container {
  height: 100%;
  background:#f8f8f8;
}
.m-banner {
  width: 100%;
  padding:24rpx;
}
.banner {
  width:100%;
  height:280rpx;
  border-radius:5px;
}
.m-index-top {
  width: 100%;
  height: 400rpx;
  background: #1b81d3;
}
.subnav-wrap {
  margin-top: -64rpx;
  padding:0 24rpx;
  /* box-shadow: 0 -6rpx 4rpx rgba(0, 0, 0, 0.2); */
}

.m-index-subnav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background: #fff;
}

.m-index-subnav .item {
  flex-grow: 1;
  text-align: center;
  padding: 36rpx 0;
  width: 33.3%;
  border-right: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
}

.m-index-subnav .last {
  border-right: none;
}

.m-index-subnav .item .icon {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  opacity: .7;
}


