/* pages/course/list/index.wxss */
.container {background:#fff;}
.m-top-tags {
  width:100%;
  display: flex;
  justify-content: space-between;
  padding:24rpx 24rpx 0;
}
.m-top-tags .item {
  position: relative;
  display: inline-block;
  margin-right: 48rpx;
  width: auto;
  font-size:30rpx;
  font-weight: bold;
  color:#121212;
}
.m-top-tags .item .caption {
  display: inline-block;
  margin-bottom:24rpx;
}
.m-top-tags .item .ht-icon {
  display: none;
  position: absolute;
  left:0;
  right:0;
  bottom: 0;
  width:100%;
  height:8rpx;
  overflow: hidden;
  border-radius:4rpx;
  background:#c00;
}
.m-top-tags .active {color:#c00;}
.m-top-tags .active .ht-icon {display: block;}
.m-top-tags .search-btn {
  width:36rpx;
  height: 36rpx;
}