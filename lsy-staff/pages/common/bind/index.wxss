/* pages/mycard/bind/index.wxss */
page {height:100%;}
.container {
  display: block;
  width:100%;
  height:100%;
  background:#fff;
}
.m-form .form-group {
  align-items: center;
}
.m-form .input-box {
  height:76rpx;
  box-sizing: border-box;
}
.m-form .form-group .code-btn {
  flex-shrink: 0;
  margin-left: 5%;
  width: 30%;
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  border-radius: 10rpx;
}

.m-form .form-group .btn-active {
  background-color: #232323;
  /* background-color: #28c0c6; */
  color: #fff;
}
.m-form .form-group .btn-disebled {
  background-color: #bbb;
  color: #fff;
}

.m-tips-error {
  padding-top:200rpx;
  text-align: center;
}
.m-tips-error .icon {
  margin-bottom:64rpx;
  width:128rpx;
  height:128rpx;
  filter: grayscale(1);
  opacity: .3;
}
.m-tips-error .section {
  font-size:32rpx;
  margin-bottom:12rpx;
}
.m-tips-error .desc {
  margin-bottom:64rpx;
  font-size:28rpx;
  color:#9c9c9c;
}
.comname {
  padding:24rpx;
  font-size:32rpx;
}