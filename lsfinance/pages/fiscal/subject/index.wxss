/* pages/fiscal/subject/index.wxss */
.m-tab {
  padding:12rpx 24rpx 0 24rpx;
  box-sizing: border-box;
  white-space: nowrap;
  width:100%;
  background: #fff;
  /* border-bottom:2px solid #f4f4f4; */
}
.m-tab .scroll-view-item {
  margin-right:36rpx;
  display: inline-block;
  height:64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size:30rpx;
}
.m-tab .active {
  border-bottom:2px solid #1b81d3;
  color:#1b81d3;
}
.m-subject-list {
  width:100%;
  background: #fff;
}
.m-subject-list .item {
  display: flex;
  padding:24rpx;
  align-items:center;
  border-bottom:1px solid #f1f1f1;
}
.m-subject-list .item .icon {
  flex-shrink: 0;
  flex-grow:0;
  margin-right:24rpx;
  width:32rpx;
  height:32rpx;
  border:1px solid #ddd;
  border-radius:50%;
}