/* pages/prepay/index/index.wxss */
@import '../main.wxss';

.yfyc-top {
  margin-bottom: 0;
}



.m-recharge-type {
  width:100%;
  background:#fff;
}

.m-recharge-type .title {
  display: inline-block;
  width:200rpx;
  font-size:30rpx;
}
.m-recharge-type .recharge-item {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom:1px solid #f1f1f1;
}
.m-recharge-type .price {
  color:#fa4349;
  font-size:32rpx;
}
.m-recharge-type .right-box {
  text-align: right;
}
.m-recharge-type .discount {
  display: inline-block;
  width:90rpx;
  font-size:22rpx;
  background-color:#fa4349;
  color:#fff;
  text-align: center;
}
.select-icon {
  flex-shrink: 0;
  flex-grow:0;
  margin-top:12rpx;
  margin-right:24rpx;
  width:32rpx;
  height:32rpx;
  border-radius:50%;
  /* box-shadow: inset 0 0 6px rgba(0,0,0,.4); */
  border:1px solid #787878;
}
.midel-box {
  flex-shrink: 1;
  width:100%;
}
.selected {
  background: #1b81d3;
  border-color:#1b81d3;
}
.m-pay-btn {background:#fff;}
.retrench {white-space: nowrap;}
.unpay-tips {
  display: flex;
  justify-content: space-between;
  align-items:center;
  padding:36rpx 24rpx;
  color:#fa4349;
}