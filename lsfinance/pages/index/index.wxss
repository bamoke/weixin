/**index.wxss**/



.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.m-index-top {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 240rpx;
  background: #1b81d3;
}

.index-company-name {
  padding: 0 40rpx;
  height: 60rpx;
  /* border:1px solid #fff; *//* border-radius:30rpx; */
  color: #fff;
}
.switch-btn {
  margin-bottom:-8rpx;
  margin-left:12rpx;
  display: inline-block;
  border: 16rpx solid transparent;
  border-top-color: #fff;
}
.index-company-name .name {
  font-size: 34rpx;
}

.subnav-wrap {
  margin-top: -64rpx;
  /* box-shadow: 0 -6rpx 4rpx rgba(0, 0, 0, 0.2); */
}

.m-index-subnav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background: #fff;
}

.m-index-subnav .item {
  flex-grow: 1;
  text-align: center;
  padding: 36rpx 0;
  width: 33.3%;
  border-right: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
}

.m-index-subnav .last {
  border-right: none;
}

.m-index-subnav .item .icon {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
}

.g-card {
  box-sizing: border-box;
  width: 100%;
  background: #fff;
}

.g-card > .header {
  padding: 24rpx 24rpx 12rpx;
  border-bottom: 2px solid #f1f1f1;
}

.g-card > .header > .title {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  color: #232323;
  vertical-align: middle;
}

.g-card > .header > .title::before {
  display: inline-block;
  margin-right: 12rpx;
  content: "";
  margin-top: -2rpx;
  width: 8rpx;
  height: 28rpx;
  line-height: 1;
  background: #1b81d3;
  border-radius: 4rpx;
  vertical-align: middle;
}

.m-index-news .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1px solid #f1f1f1;
}

.m-index-news .item .title {
  font-size: 28rpx;
}

.m-index-news .item .date {
  color: #9c9c9c;
  font-size: 24rpx;
}
