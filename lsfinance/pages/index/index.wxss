/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.m-index-banner {
  width:100%;
  height: 320rpx;
  background:#1b81d3;
}
.m-index-subnav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:100%;
  background: #fff;
}
.m-index-subnav .item {
  flex-grow: 1;
  text-align: center;
}