.fybx-detail-list {
  width: 100%;
  border-top: 1px solid #f1f1f1;
  padding-bottom: 180rpx;
  box-sizing: border-box;
}

.fybx-detail-list .item {
  background: #fff;
}

.fybx-detail-list .section {
  /* font-weight: bold; */
  box-sizing: border-box;
  font-size: 32rpx;
  padding: 24rpx;
  border-bottom: 1px solid #e1e1e1;
}

.fybx-detail-list .section .icon {
  width:48rpx;
  height:48rpx;
  background-image: url(http://www.pykscloud.com/Uploads/wesource/main-icon.png);
  background-repeat: no-repeat;
  background-size:150px auto;
  background-position:-48px top; 
  opacity: .4;
  transition:transform 100ms;
}
.fybx-detail-list .section .icon-close {
  transform: rotate(-90deg)
}
.fybx-detail-list .section .icon-open {
  transform: rotate(90deg)
}

.fybx-detail-list .child {
  padding: 0 24rpx;
  border-bottom: 1px solid #e1e1e1;
  background-color: #f5f5f5;
  color: #7c7c7c;
}

.fybx-detail-list .child-item {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-top: 1px solid #e1e1e1;
}

.fybx-detail-list .child-item:first-child {
  border: none;
}

.fybx-detail-list .child-item .child-name {
  flex-shrink: 0;
  width: 200rpx;
}


.m-top-operator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20%;
  box-sizing: border-box;
  width: 100%;
  height: 200rpx;
  background: #1b81d3;
}

.m-top-operator .item {
  width: 96rpx;
  color: #fff;
  text-align: center;
}

.m-top-operator .item .icon-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 96rpx;
  height: 96rpx;
  background: #fff;
  border-radius: 50%;
}

.m-top-operator .item .icon {
  width: 64rpx;
  height: 64rpx;
  background-image: url(http://www.pykscloud.com/Uploads/wesource/main-icon.png);
  background-size:200px auto; 
  background-repeat: no-repeat;
}
.m-top-operator .item .icon-new {
  background-position:-32px top;
}
.m-top-operator .item .icon-draft {
  background-position:left top;
}

.m-bxd-list {
  width: 100%;
  color: #959595;
}
.top-box {padding-bottom:12rpx;margin-bottom:12rpx;border-bottom:1px solid #f1f1f1;}
.m-bxd-list .item .description {
  margin-right:40rpx;
  margin-bottom: 12rpx;
  font-size: 32rpx;
  color: #2c2c2c;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.m-list .item .amount {
  font-size:32rpx;
  color:#ff3a31;
}