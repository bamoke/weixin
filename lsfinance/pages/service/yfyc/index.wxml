<!--pages/service/yfyc/index.wxml-->
<view class="container" wx:if="showPage">
  <view class="m-total yfyc-top">
    <view class='section'>预存余额(元)</view>
    <view class="amount">{{amountTotal}}</view>
  </view>
  <view class="m-tab">
    <view class="tab" bindtap='switchTab'>
      <view class="item {{curTabKey=='recharge'?'active':''}}" data-key="recharge">我要预存</view>
      <view class="item {{curTabKey=='logs'?'active':''}}" data-key="logs">预存记录</view>
    </view>
    <view class="tab-content">
      <!--recharge-->
      <view hidden='{{curTabKey!=="recharge"}}'>
        <view class="m-recharge-type">
          <view class="recharge-item">
            <view class="select-icon"></view>
            <view class="midel-box">
              <text class="title">1个月</text>
            </view>
            <view class="right-box">
              <view class="price">￥300.00</view>
            </view>
          </view>
          <view class="recharge-item">
            <view class="select-icon selected"></view>
            <view class="midel-box">
              <text class="title">3月</text>
              <text class="discount">九八折</text>
            </view>
            <view class="right-box">
              <view class="price">￥1800.00</view>
              <view class="retrench s-text-success">节省:￥200</view>
            </view>
          </view>
          <view class="recharge-item">
            <view class="select-icon"></view>
            <view class="midel-box">
              <text class="title">6个月</text>
              <text class="discount">九五折</text>
            </view>
            <view class="right-box">
              <view class="price">￥1800.00</view>
              <view class="retrench s-text-success">节省:￥200</view>
            </view>
          </view>
          <view class="recharge-item">
            <view class="select-icon"></view>
            <view class="midel-box">
              <text class="title">12个月</text>
              <text class="discount">九折</text>
            </view>
            <view class="right-box">
              <view class="price">￥1800.00</view>
              <view class="retrench s-text-success">节省:￥200</view>
            </view>
          </view>
        </view>
        <view class="m-pay-btn">
          <text class="">确认支付</text>
        </view>
      </view>

      <!--logs-->
      <view class="item" hidden='{{curTabKey!=="logs"}}'>
        <view class='m-list' wx:if="{{logsList.length > 0}}">
          <view class='item' wx:for="{{logsList}}" wx:key="id">
            <view class="g-row-bt">
              <view class='amount'>{{item.amount}}</view>
              <view class="status {{item.status=='已审核'?'s-text-success':''}}">{{item.status}}</view>
            </view>
            <view class='desc'>{{item.desc}}</view>
            <view class='g-row-bt item-bt'>
              <view>{{item.comname}}</view>
              <view>{{item.create_time}}</view>
            </view>
          </view>
        </view>

        <view class="m-empty-box" wx:else>
          <view class='tips'>没有记录</view>
        </view>
      </view>
    </view>
  </view>
</view>