/**app.wxss**/

page {
  height: 100%;
  background: #f7f7f7;
}

view {
  width: 100%;
  box-sizing: border-box;
}

.container {
  min-height: 100%;
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 1.2;
  background: #f7f7f7;
  color: #6c6c6c;
  overflow: hidden;
}

.g-row-bt {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.g-column-bt {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.g-card {
  margin-bottom: 24rpx;
  border-bottom: 1px solid #f1f1f1;
  box-sizing: border-box;
  background: #fff;
}

.g-card > .header {
  padding: 24rpx 24rpx 12rpx;
  border-bottom: 2px solid #f1f1f1;
}

.g-card > .header > .title {
  display: table-cell;
  height: 34rpx;
  font-size: 34rpx;
  /* font-weight: bold; */
  color: #232323;
  vertical-align: center;
}

.g-card > .header > .title::before {
  display: inline-block;
  margin-right: 12rpx;
  content: "";
  width: 8rpx;
  height: 28rpx;
  line-height: 1;
  background: #2d8cf0;
  border-radius: 4rpx;
}

.g-pad-box {
  padding: 24rpx;
  box-sizing: border-box;
}

.g-row-bt {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/****/

.m-banner-small {
  width: 100%;
  height: 280rpx;
}

.m-tab {
  display: flex;
  padding-top: 24rpx;
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #f1f1f1;
}

.m-tab .tab-item {
  display: block;
  font-size: 30rpx;
  height: 64rpx;
  text-align: center;
  border-bottom: 4rpx solid #ddd;
}

.m-tab .title {
  display: inline-block;
  line-height: 60rpx;
  box-sizing: border-box;
  border-bottom: 2px solid transparent;
}

.m-tab .active .title {
  font-weight: bold;
  color: #232323;
  border-bottom-color: #2d8cf0;
}
.m-base-info .title {
  font-size: 40rpx;
  color: #232323;
  font-weight: bold;
}

.m-jobs-list {
  background: #fff;
}

.m-jobs-list .item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  border-bottom: 1px solid #f1f1f1;
}

.m-jobs-list .item .hd {
  margin-bottom: 12rpx;
}

.m-jobs-list .item .title {
  color: #232323;
  font-size: 32rpx;
}

.m-jobs-list .item .wages {
  flex-grow: 0;
  flex-shrink: 0;
  width: 160rpx;
  font-size: 30rpx;
  text-align: right;
  color: #f30;
  white-space: nowrap;
}

.m-jobs-list .item .requirement .fg {
  margin: 0 12rpx;
  font-size: 20rpx;
  line-height: 1;
  color: #ccc;
}

.m-jobs-list .logo {
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 24rpx;
  width:128rpx;
  height: 128rpx;
}

.m-jobs-list .company-name {
  margin-bottom: 12rpx;
}

.m-tags {
  margin-top: 12rpx;
  overflow: hidden;
}

.m-tags text {
  display: inline-block;
  margin-right: 12rpx;
  padding: 8rpx 12rpx;
  line-height: 1;
  font-size: 22rpx;
  color: #ababab;
  background: #f8f8f8;
}

.m-company-card {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.m-company-card .company-name {
  margin-bottom: 24rpx;
  font-size: 32rpx;
  color: #232323;
}

.m-company-card .logo-wrap {
  width: 90rpx;
  height: 90rpx;
  border-radius: 60rpx;
}

.m-company-card .logo {
  width: 90rpx;
  height: 90rpx;
}

.m-attr {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  font-size:28rpx;
}

.m-attr .util {
  display: block;
}

.m-attr .fg {
  display: block;
  margin: 0 12rpx;
  color: #ccc;
  font-size: 22rpx;
  line-height: 1;
}

.m-filter {
  position: relative;
  padding:0 24rpx;
  height: 80rpx;
}

.item-wrap {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.m-filter .filter-item {
  width: auto;
  text-align: center;
  border: 0;
}

.m-filter .filter-item .title {
  display: inline-block;
}

.m-filter .filter-item .selected {
  display: inline-block;
  margin: 0 12rpx;
  color: #232323;
}

.m-filter .filter-item .icon {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  position: relative;
  vertical-align: middle;
}

.m-filter .filter-item .icon::after {
  content: "";
  position: absolute;
  left: 0;
  top: 10rpx;
  display: inline-block;
  border: 12rpx solid transparent;
  border-top-color: #ccc;
}

.m-filter .options-wrap {
  position: absolute;
  left: 0;
  top: 82rpx;
  z-index: 2;
  padding: 24rpx 24rpx 0 0;
  background: #fff;
  border-bottom: 1px solid #f1f1f1;
}

.m-filter .dynamic-layer .cover-box {
  position: fixed;
  left: 0;
  right: 0;
  top: 82rpx;
  bottom: 0;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.5);
}

.m-filter .options-wrap .opt-item {
  display: inline-block;
  width: auto;
  margin-left: 24rpx;
  margin-bottom: 24rpx;
  padding: 12rpx 24rpx;
  line-height: 1;
  background: #f1f1f1;
}

.m-filter .options-wrap .active {
  color: #000;
  background: #fc0 !important;
}
.m-search-box {
  width: 100%;
  box-sizing: border-box;
  padding:24rpx;
  background:#fff;
}
.search-bar {
  display: flex;
  justify-content: space-between;
  align-items:center;
  padding:0 24rpx;
  height:64rpx;
  border:1px solid #f1f1f1;
  border-radius:32rpx;
  font-size:24rpx;
  background-color:#f7f7f7;
}
.search-bar .input-box {
  flex-shrink: 1;
  width:100%;
}
.search-bar .icon {
  flex-grow: 0;
  flex-shrink:0;
  margin-left:40rpx;
  width:48rpx;
  height:48rpx;
  background-image:url("http://www.zhmlife.com/Uploads/search-icon.png");
  background-repeat:no-repeat;
  background-size:48rpx auto;
  background-position: center;
  opacity: .2;
}

.m-tips-page {
  padding-top: 120rpx;
  align-items: center;
  width: 100%;
  height: 100%;
  text-align: center;
}

.m-tips-page .icon {
  width: 180rpx;
  height: 180rpx;
  opacity: 0.1;
}

.m-tips-page .tips {
  margin: 20rpx 0 80rpx;
  font-size: 34rpx;
}

.m-paging-wrap {
}

.m-paging-wrap .row {
  padding: 40rpx 0;
  text-align: center;
}

.m-paging-wrap .no-more {
  color: #ccc;
  background: #f7f7f7;
}


.tips-page-empty .tips {
  color: #9c9c9c;
}

.tips-page-success .tips {
  color: #3c0;
}

.btn {
  display: inline-block;
  width: 70%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  border-radius: 6rpx;
  text-align: center;
}

.btn-block {
  display: block;
  width: 100%;
}

.btn-primary {
  background: #2d8cf0;
  color: #fff;
}

.btn-default {
  background: #f7f7f7;
  color: #6c6c6c;
  border: 1px solid #ccc;
}

