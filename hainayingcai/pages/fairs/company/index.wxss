/* pages/fairs/company/index.wxss */

.m-tab-content {
  min-height: 600rpx;
  background: #fff;
}

.m-tab-content .content-box {
  line-height: 1.8;
  font-size: 28rpx;
}

.m-top {
  display: flex;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #2d8cf0;
  color: #fff;
}
.m-base-info {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.m-base-info .title {
  color: #fff;
}

.m-top .logo-box {
  flex-grow: 0;
  margin-right: 24rpx;
  width: 96rpx;
  height: 96rpx;
  padding: 8rpx;
  background: #fff;
}

.m-top .logo {
  width: 80rpx;
  height: 80rpx;
}

.m-base-info .other {
  opacity: 0.6;
}

.m-base-info .other .fg {
  margin: 0 12rpx;
  font-size: 22rpx;
  line-height: 1;
  opacity: 0.8;
  display: inline-block;
  vertical-align: middle;
}

.m-base-info .other .util {
  display: inline-block;
  vertical-align: middle;
}
