/* pages/resume/detail/index.wxss */

.container {
  padding-bottom: 40rpx;
}

.resume-main-wrap {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
}

.resume-main-wrap .bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.resume-main-wrap .bar .title {
  display: block;
  width: auto;
  font-size: 30rpx;
  color: #232323;
  white-space: nowrap;
}

.resume-main-wrap .bar .edit-btn {
  width: auto;
  white-space: nowrap;
  color: #2d8cf0;
}

.resume-main-wrap .empty-content {
  padding: 40rpx 0;
  text-align: center;
  color: #ccc;
}

.resume-main-wrap .empty-content .icon {
  margin-bottom: 24rpx;
  width: 128rpx;
  height: 128rpx;
  opacity: 0.1;
}

.resume-main-wrap .sub-bar {
  margin-top: 24rpx;
  color:#232323;
}

.work-content {
  padding: 12rpx 0;
  line-height: 1.5;
  color: #9c9c9c;
}

.u-add-item-btn {
  padding: 48rpx 0 24rpx;
  text-align: center;
  color: #232323;
}

.u-add-item-btn .text {
  vertical-align: middle;
}

.resume-base {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  color: #232323;
}

.resume-base .top {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.resume-base .name {
  margin-right: 24rpx;
  width: auto;
  flex-grow: 0;
  flex-shrink: 0;
  font-size: 40rpx;
  font-weight: bold;
}

.resume-base .edit-btn {
  color: #2d8cf0;
}

.resume-base .edit-btn .text {
  vertical-align: middle;
}

.resume-base .property {
  margin-bottom: 24rpx;
}

.resume-base .avatar {
  flex-shrink: 0;
  flex-grow: 0;
  width: 128rpx;
  height: 128rpx;
  background: #f1f1f1;
  border-radius: 50%;
}

.resume-base .other {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.resume-base .other .u-myicon {
  flex-shrink: 0;
  flex-grow: 0;
}

.main-item-list .item {
  padding: 24rpx 0;
  border-bottom: 1px solid #f1f1f1;
}

.main-item-list .section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  line-height: 1;
}

.main-item-list .section-title .title {
  color: #232323;
  font-size: 30rpx;
  font-weight: bold;
}

.main-item-list .section-title .edit {
  width: auto;
  flex-grow: 0;
  text-align: right;
  white-space: nowrap;
  color: #2d8cf0;
}

.main-item-list .other-info {
  color: #9c9c9c;
}

.main-item-list .other-info .row {
  margin-bottom: 12rpx;
  line-height: 1;
}

.mult-text {
  padding:24rpx 0;
  line-height: 1.5;
}