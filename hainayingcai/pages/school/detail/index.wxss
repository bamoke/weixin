/* pages/article/detail/index.wxss */

.m-detail-wrap {
  width: 100%;
  box-sizing: border-box;
  padding: 48rpx 24rpx;
  margin-bottom: 24rpx;
  background: #fff;
  overflow: hidden;
}

.content {
  padding-bottom: 48rpx;
  width: 100%;
  overflow: hidden;
  line-height: 2;
}

.content image {
  max-width: 100%;
}

.m-detail-wrap .title {
  font-size: 40rpx;
  /* color:#366bcb; */
  font-weight: bold;
  text-align: center;
}

.m-detail-wrap .total {
  display: flex;
  justify-content: center;
  margin: 24rpx 0 48rpx;
  padding-bottom: 12rpx;
  width: 100%;
  font-size: 24rpx;
  color: #939393;
  text-align: center;
  border-bottom: 1px solid #f1f1f1;
}

.m-detail-wrap .total .view {
  margin-right: 24rpx;
}

.m-video-box {
  margin-bottom: 48rpx;
  width: 100%;
}

.m-video-box video {
  width: 100%;
}

.m-end {
  position: relative;
  margin: 48rpx 0;
  width: 100%;
  height: 20rpx;
  border-bottom: 1px solid #f1f1f1;
  text-align: center;
}

.m-end .tips {
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -50rpx;
  margin-top: -30rpx;
  z-index: 1;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border: 1px solid #f1f1f1;
  color: #ccc;
  border-radius: 50%;
  background: #f8f8f8;
}

.m-top-box {
  position: relative;
  width: 100%;
  height: 300rpx;
  color: #fff;
  background:#2d8cf0;
}

.m-top-box .info {
  position: absolute;
  left: 0;
  top: 0;
  padding: 24rpx;
  width: 100%;
  height: 300rpx;
  z-index: 9;
  text-align: center;
}

.m-top-box .thumb {
  display: inline-block;
  flex-grow: 0;
  flex-shrink: 0;
  padding:12rpx;
  width: 128rpx;
  /* height: 96rpx; */
  background: #fff;
  /* border-radius:50%; */
  border:2px soilid #fff;
}

.m-top-box .title {
  margin-top: 12rpx;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  width: auto;
}

.m-top-box .title .txt {
  display: inline-block;
  padding: 18rpx 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.7);
  line-height: 1;
}

.m-top-box .bg {
  position: absolute;
  left: 0;
  top: 0;
  height: 300rpx;
  width: 100%;
  z-index: 1;
}
