/* components/car-operator/car-operator.wxss */
.wrap {
  width:100%;
  text-align: right;
}
.operator-box {
  display:flex;
  align-items: center;
  width: 100%;
  overflow: hidden;
}
.operator-box .o-btn {
  flex-grow: 0;
  flex-shrink: 0;
  display: flex;
  width:48rpx;
  height:48rpx;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
}
.operator-box .minus {
  background-color:#fff;
  border:1px solid #ccc;
}
.operator-box .add {
  background-color:#ff3c02;
}
.operator-box .num {
  flex-shrink: 0;
  min-width:80rpx;
  line-height:1;
  overflow: hidden;
  text-align: center;
}
.buy-btn {
  display: inline-block;
  width:168rpx;
  height:48rpx;
  line-height: 48rpx;
  font-size:26rpx;
  text-align: center;
  background:#ff3c02;
  color:#fff;
  border-radius: 24rpx;
}
.m-icon {
  width:32rpx;
  height: 32rpx;
  display: inline-block;
  vertical-align: middle;
}
.u-input {
  flex-shrink: 1;
  display: inline-block;
  box-sizing: border-box;
  margin:0 12rpx;
  padding:0 12rpx;
  width: auto;
  height:48rpx;
  line-height: 48rpx;
  border:1px solid #ccc;
  border-radius: 24rpx;
  text-align: left;
}