/* miniprogram/pages/product/list/list.wxss */
.m-search-bar {
  position: fixed;
  top:0;
  z-index: 999;
  width:100%;
  padding:0 24rpx 24rpx;
  background-color:#ff3c02;
  box-shadow: 0 4px 4px rgba(0,0,0,.1);
}
page,.container,.main-content {
  height: 100%;
  box-sizing: border-box;
}
.main-content {
  display: flex;
  width:100%;
  min-height:100%;
  position: relative;
  padding-top:96rpx;
}

.m-cate-wrap {
  flex:0 0 auto;
  width:156rpx;
  height: 100%;
  background:#fff;
  font-size:26rpx;
}
.cate-pro-list .thumb {
  width:128rpx;
  height:128rpx;
}
.cate-pro-list .title {
  font-size:28rpx;
}
.cate-pro-list .ft .amoun {
  font-size:26rpx;
}
.m-cate-list .item {
  box-sizing: border-box;
  padding:0 24rpx;
  height:120rpx;
  line-height: 120rpx;
  width:100%;
  overflow: hidden;
  border-bottom:1px solid #f8f8f8;
}
.m-cate-list .current .name{
  /* font-weight: 500; */
  color:#ff3c02;
  /* background-color:#f8f8f8; */
}
.search-bg {
  display: flex;
  align-items: center;
  padding:0 24rpx;
  background-color:#fff;
  color:#999;
  border-radius: 32rpx;
}
.search-bg .input-box {
  flex-shrink: 1;
  margin-left:12rpx;
  width:100%;
  height: 48rpx;
  font-size:24rpx;
}