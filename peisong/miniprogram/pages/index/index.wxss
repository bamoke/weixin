/* miniprogram/pages/index/index.wxss */
.m-index-banner-box {
  width: 100%;
  height: 280rpx;
}

.index-banner {
  height: 280rpx;
}

.index-banner .img {
  width: 100%;
  height: 400rpx;
}

.m-index-cate-list {
  display: flex;
  flex-wrap: wrap;
  margin: 24rpx;
  padding: 24rpx 0;
  background: #fff;
}

.m-index-cate-list .item {
  flex: 0 0 width;
  width: 20%;
  padding: 16rpx 0;
  text-align: center;
}

.m-index-cate-list .icon {
  display: inline-block;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
}

.m-index-cate-list .name {
  width: 100%;
  overflow: hidden;
  line-height: 1;
}



