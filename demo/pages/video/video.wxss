/* pages/video/video.wxss */
.m-video {
    margin-bottom:20rpx;
    width:100%;
    background-color:#fff;
}
.m-video .title {
    display: block;
    padding:20rpx 20rpx 0;
    font-size:32rpx;
}
.m-video video {
    width:100%;
}
.m-video .desc {
    padding:20rpx;
    color:#999;
    font-size:28rpx;
}
.userinfo {
    display:flex;
    justify-content: space-between;
    align-items: center;
    padding:0 20rpx 20rpx;
}
.userinfo .avatar {
    margin-right:10rpx;
    width:64rpx;
    height:64rpx;
    border-radius:50%;
    vertical-align: middle;
}
.userinfo .time {color:#999;}

.m-danmu {
    box-sizing:border-box;
    padding:20rpx;
    width:100%;
    background-color:#fff;
}
.m-danmu textarea {
    box-sizing:border-box;
    margin:20rpx 0;
    padding:20rpx;
    width:100%;
    height:100rpx;
    background-color:#f8f8f8;
    font-size:28rpx;
    border-radius:8rpx;
}
.m-danmu .btn {
    display: block;
    height:80rpx;
    line-height:80rpx;
    color:#fff;
    font-size:30rpx;
    text-align:center;
    background-color:#fd585a;
    border-radius:8rpx;
}