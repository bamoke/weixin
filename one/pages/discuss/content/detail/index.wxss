/* pages/discuss/content/detail/index.wxss */
.m-discuss-content-box .discuss-content {
  margin-bottom:24rpx;
  padding-bottom:24rpx;
  border-bottom:1px solid #f1f1f1;
  color:#232323;
  font-size:32rpx;
}
.m-discuss-content-box .name {
  color:#232323;
  text-align: center;
}
.m-discuss-content-box .time {
  color:#9c9c9c;
  font-size:24rpx;
  text-align: center;
}
.m-comment-wrap {
  padding-bottom:140rpx;
}
.m-comment-form {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size:24rpx;
}
.m-comment-form .release-btn {
  flex-grow: 0;
  flex-shrink: 0;
  margin-left:24rpx;
  font-size:24rpx;
  background: #1b81d3;
  color:#fff;
  width:100rpx;
  height:60rpx;
  line-height: 60rpx;
}
.m-comment-form .input {
  flex-shrink: 1;
  width:100%;
  padding:0 12rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color:#f8f8f8;
}

.m-comment-list .item {
  padding:24rpx;
  border-bottom:1px solid #f1f1f1;
}
.top-info {
  display: flex;
  justify-content: space-between;
}
.top-info .name {color:#232323;}
.top-info .time {color:#9c9c9c;font-size:24rpx;}