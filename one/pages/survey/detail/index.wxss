/* pages/survey/index.wxss */
.survey {
  padding:24rpx;
  box-sizing:border-box;
  width:100%;
  background: #fff;
}
.base-info {
  padding:24rpx;
}
.base-info .title {
  font-size: 34rpx;
  font-weight: bold;
  color:#121212;
}
.quetion-item {
  padding:24rpx 0;
  border-bottom:1px solid #f1f1f1;
}
.quetion-item .ask {
  margin-bottom:24rpx;
}
.quetion-item .ask .title {
  font-size:32rpx;
  color:#121212;
}
.m-option .option-item {
  display: flex;
  padding:24rpx 0;
}
.m-option .option-item .icon {
  flex-shrink: 0;
  flex-grow: 0;
  margin-right:12rpx;
  width:36rpx;
  height:36rpx;
  border-radius:50%;
  border:1px solid #ddd;
}
.error-tips {
  padding:12rpx 24rpx;
  background-color:rgba(230,67,64,.2);
  color:#e64340;
}