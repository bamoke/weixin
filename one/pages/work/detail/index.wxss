/* pages/work/detail/index.wxss */
.g-start-page {
  padding:24rpx;
}
.g-start-page .title {
  margin-bottom:24rpx;
  font-size:32rpx;
  color:#121212;
}
.g-start-page .description {
  margin-bottom:40rpx;
}
.m-question-nu {
  padding: 24rpx;
}
.m-question-nu .util {
  display: inline-block;
  margin-right:12rpx;
  width:48rpx;
  height:48rpx;
  line-height: 48rpx;
  text-align: center;
  color:#ccc;
  border-radius:50%;
  border:1px solid #ddd;
}
.m-question-nu .active {
  background-color:#2a94fa;
  color:#fff;
  border-color:#2a94fa;
}
.m-question-nu .correct {
  background-color:#00cc66;
  color:#fff;
  border-color:#00cc66;
}
.m-question-nu .error {
  background-color:#f30;
  color:#fff;
  border-color:#f30;
}

.result-my-record {
  padding-top:80rpx;
  text-align: center;
}
.result-my-record .score {
  display: inline-block;
  width:200rpx;
  height:200rpx;
  line-height: 200rpx;
  text-align: center;
  border-radius:50%;
  color:#2a94fa;
  border:1px solid #2a94fa;
  font-size:60rpx;
}
.m-total-bar {
  padding:40rpx 0;
  display: flex;
  justify-content: center;
}
.m-total-bar .util {margin-right:24rpx;}
.m-total-bar .util .nu {font-weight: bold;margin-right:12rpx;}
.m-score-ranking .bar {
  padding:40rpx 0 24rpx;
  font-size:32rpx;
  text-align: center;
  font-weight: bold;
  border-bottom:1px solid #f1f1f1;
}
.m-score-ranking .item {
  display: flex;
  justify-content: space-between;
  padding:24rpx 0;
  border-bottom:1px solid #f1f1f1;
}
.m-score-ranking .item .avatar {
  display: inline-block;
  margin-right:12rpx;
  width:64rpx;
  height:64rpx;
  border-radius:50%;
  vertical-align: middle;
}
.m-score-ranking .item .name {
  color:#121212;
}
.m-score-ranking .item .score {
  font-size:32rpx;
  font-weight: bold;
  color:#f30;
}