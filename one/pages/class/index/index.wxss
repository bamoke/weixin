/* pages/class/index/index.wxss */
.m-class-list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:24rpx;
  border-bottom:1px solid #f1f1f1;
}
.m-class-list .item  .name {color:#121212;font-size:34rpx;}
.m-class-list .item .left-box {
  flex-grow: 0;
}
.m-class-list .item .right-icon {
  flex-shrink: 0;
  flex-grow: 0;
  margin-left:40rpx;
  width:auto;
  text-align: right;
}
.other-info {
  display: flex;
  padding-top:12rpx;
}
.other-info .util {margin-right:24rpx;color:#9c9c9c;}
.u-icon {
  display: inline-block;
  margin-right:8rpx;
  width:32rpx;
  height:32rpx;
  vertical-align: middle;
  opacity: .4;
}