<!--index.wxml-->
<view class="banner-img-c">
  <image src="/common/images/banner1.png" alt="" mode='widthFix'/>
</view>
<view class="subnav d-flex justify-content-between p-pub">
  <view><view class="img-view bg-lan"><image src="/common/images/class-icon-01.png" alt="" mode='widthFix'/></view><view class="f17 txt">成员</view></view>
  <view><view class="img-view bg-chen"><image src="/common/images/class-icon-02.png" alt="" mode='widthFix'/></view><view class="f17 txt">讨论组</view></view>
  <view><view class="img-view bg-din"><image src="/common/images/class-icon-03.png" alt="" mode='widthFix'/></view><view class="f17 txt">作业</view></view>
  <view><view class="img-view bg-huang"><image src="/common/images/class-icon-04.png" alt="" mode='widthFix'/></view><view class="f17 txt">考试</view></view>
</view>
<view class="ht-c"></view>
<view class="class-content">
  <view class="title">班级动态</view>
  <view class="content" wx:for="{{listDatas}}">
     <view  class="content-item d-flex">
        <view class="img-c">
          <image src="{{item.img}}" alt="" mode='widthFix'/>
        </view>
        <view class="text-c">
          <view class="f17 fb mb-2">{{item.title}}</view>
          <view class="f17 c-b mb-2">{{item.content}}</view>
          <view class="c-d f13 time">{{item.time}}</view>
        </view>
     </view>
  </view>
  <view class="loadmore c-b">加载更多</view>
</view>