/* pages/notes/index/index.wxss */

.container {
  background-color: #f4f4f4;
  color: #4c4c4c;
}

.m-notes-list {
  padding: 24rpx 48rpx 120rpx;
}

.m-notes-list > .item {
  position: relative;
  padding-left: 24rpx;
  padding-bottom: 48rpx;
  border-left: 1px dotted #ccc;
}

.m-notes-list .item::before {
  content: "";
  position: absolute;
  top: 20rpx;
  left: -12rpx;
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #ddd;
}

.m-notes-list .item .time {
  height: 60rpx;
  line-height: 60rpx;
  color: #ccc;
  font-size: 24rpx;
}

.m-notes-list .item .content {
  padding: 24rpx;
  border: 1px solid #f1f1f1;
  border-radius: 12rpx;
  background-color: #fff;
}

.m-foot-input {
  position: fixed;
  left:0;
  bottom:0;
  z-index:99;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 24rpx;
  width:100%;
  height:120rpx;
  background:#fff;
}
.m-foot-input .btn {
  margin-left:24rpx;
  width:120rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:28rpx;
}
.m-foot-input .input {
  flex-grow:1;
  padding:0 12rpx;
  height:60rpx;
  border:1px solid #f1f1f1;
  background: #f8f8f8;
}
