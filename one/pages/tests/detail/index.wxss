/* pages/testdetail/index.wxss */
.g-success-page,.g-start-page {
  position:fixed;
  left:0;
  top:0;
  bottom:0;
  right: 0;
  z-index:9;
  transition: all .3s;
  background: #fff;
}
.g-start-page {transform: translateX(-100%);}
.g-success-page {
  transform: translateX(100%);
}
.page-show {
  transform: translateX(0);
}

.g-start-page .description {margin:24rpx 0 60rpx;padding:24rpx;color:#666;border-top:1px solid #eee;border-bottom:1px solid #eee;}
.g-start-page .title,.g-success-page .title {
  margin:100rpx 0 40rpx;
  text-align: center;
  font-size:32rpx;
}
.g-success-page .score-num {
  padding:80rpx 0;
  text-align: center;
  font-size:100rpx;
  font-weight: bold;
  color:#fff;
  background-color:#9be0a8;
}
.g-success-page .total-info {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 0;
  color:#999;
}
.g-success-page .total-info .num {font-weight: bold;color:#333;}
.page-main-btn {color:#fff;width:50%;}

.g-question-page {width: 100%;}
.g-main-box {
  background-color:#fff;
    padding:24rpx;
  box-sizing: border-box;
  width:100%;
}
.m-question-info {
  margin-bottom:24rpx;
}
.m-question-info .ask {
  margin-bottom:24rpx;
}

.m-page {margin-bottom:24rpx;font-size:32rpx;text-align:center;}


.confirm-btn-box {
  padding-top:60rpx;
  text-align: center;
}
.confirm-btn-box .btn {
  display: inline-block;
  width:300rpx;
  height:60rpx;
  line-height: 60rpx;
  color:#fff;
  border-radius:8rpx;
  font-size:32rpx;
}
.m-tips {text-align: center;}
.m-tips .btn {
  margin-top:20rpx;
  display: inline-block;
  padding:0 40rpx;
  height:60rpx;
  line-height: 60rpx;
  background-color:#ff5b57;
  color:#fff;
  border-radius:8rpx;
  text-align: center;
}
.m-tips .btn .price {margin-right:24rpx;}

.m-analysis .bar {
  margin-bottom:20rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  border-bottom:1px solid #eee;
  font-size:32rpx;
}

.m-answer .answer-item {
  display: flex;
  padding:10rpx 0;
}
.m-answer-result {
  margin-top:24rpx;
  text-align: center;
}
.m-answer-result .result {
text-align: center;
  font-size:32rpx;
}
.m-answer-result .correct {
  color:#02dc21;
}
.m-answer-result .error {color:#ff5b57;}
.m-answer-result icon {vertical-align: middle;}
.m-answer-result .txt {margin-left:10rpx;display: inline-block;vertical-align: middle;}
.m-bottom-btn-box {
    position: fixed;
  bottom: 24rpx;
  left:0;
  right:0;
  z-index: 1;
  padding:0 24rpx;
  box-sizing: border-box;
}
.m-bottom-btn-box .bottom-btn {
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  color:#fff;
  font-size:32rpx;
  border-radius:8rpx;
}
.u-type {
  display: inline-block;
  margin-right:10rpx;
  padding:0 12rpx;
  color:#fff;
  border-radius: 6rpx;
  font-size:24rpx;
  vertical-align: middle;
}
.type-sigle {
  background-color:#a6e5e6;
}
.type-multiple {
  background-color:#9be0a8;
}
.type-judge {
  background-color:#e0de9b;
}