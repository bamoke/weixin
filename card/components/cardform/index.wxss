/* components/cardform/index.wxss */
.top-info {
  display: flex;
  padding:24rpx;
}
.m-form-default {
  width: 100%;
}
.m-form-default .form-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:30rpx 24rpx;
  border-bottom:1px solid #f1f1f1;
  font-size:30rpx;
}
.m-form-default .form-group:last-child {
  border:none;
}
.m-form-default .form-group .label {
  flex-shrink: 0;
  width:120rpx;
  white-space: nowrap;
  color:#232323;
}
.m-form-default .form-group .val {
  text-align: right;
  width:70%;
}
.m-form-default .form-group .val {
  text-align: right;
}
.m-form-default .textarea {
  box-sizing: border-box;
  width:100%;
}
.m-form-default .btn-box {
  border-top:1px solid #f1f1f1;
  padding:80rpx 0;
  background: #fff;
  text-align: center;
}
.m-form-default .btn-box .btn {
  width:80%;
  border-radius:45rpx;
}
.card-form .avatar-wrap{
  position: relative;
  flex-shrink: 0;
  flex-grow: 0;
  width:160rpx;
  margin-right:48rpx;
}
.card-form .avatar {
  width: 160rpx;
  height:160rpx;
  border-radius:50%;
}
.avatar-wrap .avatar-btn {
  position: absolute;
  left:0;
  top:0;
  z-index:1;
  opacity: 0;
  width: 160rpx;
  height:160rpx;
}
.no-padding {padding-left: 0!important;padding-right: 0!important;}
.base-info {
  width:100%;
  flex-shrink: 1;
}
.u-ht {
  height:24rpx;
  background:#f4f4f4;
}
.ht-border {
  border-top:1px solid #f1f1f1;
  border-bottom:1px solid #f1f1f1;
}
.btn {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  border-radius: 6rpx;
  text-align: center;
  word-spacing: 4rpx;
  letter-spacing: .5em;
}
.btn-inline {
  display: inline-block;
  padding: 0 24rpx;
}
.btn-block {
  display: block;
  width: 100%;
}

.btn-primary {
  background: #1b81d3;
  color: #fff;
}