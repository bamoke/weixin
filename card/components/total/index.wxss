/* components/total/index.wxss */
.m-total-box {
  display: flex;
  padding:24rpx 0;
  box-shadow:0 0 12rpx rgba(0, 0, 0, 0.2);
}
.m-total-box .icon {
  width:36rpx;
  height:36rpx;
}
.item {
  flex-grow: 1;
  text-align: center;
  border-right:1px solid #f1f1f1;
  color:#6c6c6c;
}
.item:last-child {
  border:none
}
.icon-grey {
  opacity: .2;
}