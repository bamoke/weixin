/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 1.75;
  background-color: #f5f5f5;
} 
/**g**/
.g-m-wrap {
  padding:0 24rpx;
  box-sizing:border-box;
  width:100%;
  background-color:#fff;
}
.g-row-bt {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:100%;
}
/**module**/
.m-empty-box {
  padding: 40rpx;
  text-align: center;
}

.m-empty-box .tips {
  font-size: 32rpx;
  color: #999;
}
.m-form {
  width: 100%;
}

.m-form .form-group {
  display: flex;
  justify-content: space-between;
  padding: 12px;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
}
.m-form .input-box {
  padding: 12rpx;
  width: 100%;
  background-color: #eee;
}

.m-form .error-box {
  padding:24rpx;
  background-color:#fff;
  color:#ff5b57;
}
.m-cur-company {
  margin-bottom:24rpx;
  padding-top:24rpx;
  padding-bottom:24rpx;
}
.m-cur-company .comName{
  color:#1b81d3;
  font-size:32rpx;
}
.m-cur-company .switch-btn {
  padding:0 24rpx;
  border:1px solid #ddd;
  border-radius:10rpx;
}
.m-list-group {
  margin-bottom:24rpx;
  width:100%;
  background:#fff;
  border-top:1px solid #f1f1f1;
}
.m-list-group .item {
  display: flex;
  justify-content:space-between;
  align-items:center;
  padding:0 24rpx;
  height:88rpx;
  border-bottom:1px solid #f1f1f1;
}
.m-list-group .item .icon {display: none;}
.m-swiper-page {width:100%;}
.m-swich-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding:24rpx 0;
  margin-bottom:24rpx;
  width:100%;
  background:#fff;
}
.m-swich-btn .btn {
  width:40%;
  border:1px solid #f1f1f1;
  height:80rpx;
  line-height:80rpx;
  text-align: center;
  box-sizing: border-box;
}
.m-swich-btn .btn:first-child {
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.m-swich-btn .btn:last-child {
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.m-swich-btn .cur {
  background:#1b81d3;
  color:#fff;
  border:none;
}
.m-empty-box {
  color:#8c8c8c;
  text-align: center;
}
