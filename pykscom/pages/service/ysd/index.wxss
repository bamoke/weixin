/* pages/service/ysd/index.wxss */
.container {color:#787878;}
.m-total {
  width:100%;
  padding:24rpx;
  margin-bottom:24rpx;
  box-sizing:border-box;
  background:#fff;
  text-align: center;
  border-bottom:1px solid #f1f1f1;
}
.m-total .section {
  font-size:32rpx;
  color:#232323;
}
.m-total .amount {
  color:#fa4349;
  font-size:56rpx;
  line-height: 1.5;
}
.m-total .num {
  margin:0 12rpx;
  color:#fa4349;
}
.m-list {
  width:100%;
}
.m-list .item {
  padding:24rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom:24rpx;
  border-top:1px solid #f1f1f1;
  border-bottom:1px solid #f1f1f1;
}
.m-list .item .amount {color:#232323;font-size:36rpx;}
.item-bt {
  margin-top:12rpx;
  padding-top:12rpx;
  border-top:1px solid #f1f1f1;
}