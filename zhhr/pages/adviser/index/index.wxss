.service-bar .section {
  flex: 0 0 auto;
  background: #fff;
  font-size: 36rpx;
  font-weight: bold;
  color: #f30;
}

.operation {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.service-btn {
  flex: 0 1 auto;
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1px solid #f1f1f1;
  background:#f4f4f4;
  border-radius: 4px;
}
