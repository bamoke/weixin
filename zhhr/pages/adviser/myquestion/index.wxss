/* pages/adviser/myquestion/index.wxss */
.m-question-list .item {
  padding:24rpx;
  border-bottom:1px solid #f4f4f4;
}
.m-question-list .item .ft {
  display: flex;
  align-items: center;
  color:#9c9c9c;
}
.m-question-list .item .title {
  padding-bottom:12rpx;
  font-size:32rpx;
  font-weight: 500;
}
.m-question-list .item .unit:not(:last-child) {
  margin-right:24rpx;
}
.m-stage-box {
  padding-bottom:12rpx;
}
.stage {
  border-radius:24rpx;
  font-size:24rpx;
  padding: 0 12rpx;
  height:32rpx;
  line-height: 32rpx;
  border:1px solid transparent;
}
.stage-default {
  border-color:#b1b1b1;
  color:#b1b1b1;
}
.stage-info {
  border-color:#4bbefa;
  color:#4bbefa;
}
.stage-success {
  border-color:#4ed581;
  color:#4ed581;
}
.stage-error {
  border-color:#fa4b4b;
  color:#fa4b4b;
}