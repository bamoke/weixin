/* pages/welfare/detail/index.wxss */
.m-grade-box {
  position: relative;
  margin-right: 12rpx;
  width:136rpx;
  height:26rpx;
  /* overflow: hidden; */
}
.m-grade-box .grade {
  position: absolute;
  left: 0;
  top:0;
  z-index: 1;
  height:32rpx;
  overflow: hidden;
}
.m-grade-box .icon-star {
  width: 136rpx;
  height: 24rpx;
}
.m-grade-box .bg {height:24rpx;}
.m-grade-box .bg .icon-star {
  filter: grayscale(100%);
  opacity:.3;
}
.grade-info {
  margin-bottom:8rpx;
}
.grade-num {
  font-size:22rpx;
  color:#9c9c9c;
}
.top-info  {
  display:flex;
  padding:24rpx;
}
.top-info .logo {
  margin-right:24rpx;
  width:96rpx;
  height:96rpx;
  border-radius:12rpx;
}
.top-info .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.top-info  .title {
  font-size:40rpx;
  line-height: 1;
}
.row {
  display: flex;
  align-items: center;
  padding:0 24rpx 24rpx;
}
.row .s-icon {
  flex:0 width;
  width:32rpx;
  height:32rpx;
  margin-right:12rpx;
}
.row .operator-icon {
  flex:0 width;
  width: 48rpx;
  height:48rpx;
}
.row-content {
  flex: 1 width;
  width:100%;
}
.row-content .big-txt {
  font-size:34rpx;
}
.tag-item {
  display: inline-block;
  margin-left:6rpx;
  padding:4rpx 8rpx;
  font-size:22rpx;
  line-height: 1;
  background:#fa4b4b;
  color:#fff;
  white-space: nowrap;
  opacity: .7;
  transform: scale(.95);
}
.detail-content {
  padding:24rpx 24rpx 48rpx;
}
.content-bar {
  margin-bottom:48rpx;
  height:48rpx;
  border-bottom:1px solid #eee;
  text-align: center;
}
.content-bar .txt {
  transform: translateY(24rpx);
  display: inline-block;
  padding:0 24rpx;
  height:48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  background:#fff;
  border-left:1px solid #eee;
  border-right:1px solid #eee;
}