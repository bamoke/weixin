/* pages/welfare/list/index.wxss */

.m-banner {
  position: relative;
  width: 100%;
  height: 320rpx;
  background: #000;
}

.m-banner .info {
  position: absolute;
  left: 0;
  top: 100rpx;
  z-index: 1;
  width: 100%;
  color: #fff;
  text-align: center;
}

.m-banner .info .title {
  margin-bottom: 24rpx;
  font-size: 34rpx;
}

.m-banner .info .addr {
  display: inline-block;
  padding: 0 24rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 24rpx;
  border: 1px solid #fff;
  font-size: 24rpx;
}

.m-banner .img {
  width: 100%;
  height: 320rpx;
  opacity: 0.6;
}

.m-type-list {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}

.m-type-list .item {
  flex: 1;
  text-align: center;
  line-height: 1;
  border-right: 1px solid #f1f1f1;
}
