/* pages/welfare/list/index.wxss */
.m-banner {
  position: relative;
  width:100%;
  height:320rpx;
  background:#000;
}
.m-banner .info {
  position: absolute;
  left:0;
  top:100rpx;
  z-index: 1;
  width:100%;
  color:#fff;
  text-align: center;
}
.m-banner .info .title {
  font-size:34rpx;
}
.m-banner .info .addr {
  display: inline-block;
  padding:0 48rpx;
  height:48rpx;
  line-height: 48rpx;
  border-radius:24rpx;
  border:1px solid #fff;
}
.m-banner .img {
  width:100%;
  height:320rpx;
  opacity: .6;
}