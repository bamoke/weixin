/* pages/event/detail/index.wxss */
.container {
  padding-bottom:168rpx;
}
.event-banner-box {
  position: relative;
  width:100%;
}
.event-banner-box .banner {
  width:100%;
  height:320rpx;
}
.event-banner-box .stage {
  position: absolute;
  left:-64rpx;
  top:8rpx;
  z-index:1;
  width:192rpx;
  height:48rpx;
  line-height: 48rpx;
  text-align: center;
  color:#fff;
  transform:rotate(-45deg);
  font-size:22rpx;
}
.stage-2 {
  background:#25b87b;
}
.stage-0 {
  background:#fa4b4b;
}
.stage-1 {
  background:#1b81d3;
}

.base-info .row {
  margin-bottom:12rpx;
  font-size:24rpx;
  color:#9c9c9c;
  line-height: 1;
}
.base-info .title {
  font-size:32rpx;
  margin-bottom:24rpx;
}
.main-content-wrap .bar {
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  align-items: center;
  margin-top:48rpx;
  height:56rpx;
}
.main-content-wrap .bar .title {
  text-align: center;
  line-height: 1;
  font-size:28rpx;
  font-weight: bold;
}
.main-content-wrap .bar .line-icon {
  width:80rpx;
  height:12rpx;
  background:#1b81d3;
  border-radius:6rpx;
}
.main-content-wrap .content {
  padding:24rpx 24rpx 48rpx;
  overflow: hidden;
  line-height: 1.7;
  font-size:30rpx;
}
.m-foot-operation {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: rgba(255, 255, 255, 0.9);
}

.m-foot-operation .ft-btn-small .txt {
  margin-top: 6rpx;
}

.m-foot-operation .ft-btn-small {
  position:relative;
  padding: 0;
  margin: 0;
  width: 20%;
  text-align: center;
  font-size: 22rpx;
  color: #9c9c9c;
  border: 0;
  background: none;
  border-radius: 0;
}



.m-foot-operation .active .icon {
  opacity: 1;
}

.m-foot-operation .disabled {
  background: #eee!important;
  color: #ccc!important;
}

.m-foot-operation .ft-btn-large {
  width: 60%;
  background: #4b8dfa;
  text-align: center;
  color: #fff;
  line-height: 80rpx;
  font-size: 34rpx;
  /* font-weight: bold; */
  border-radius: 6rpx;
}

.m-foot-operation .icon {
  /* display: inline-block; */
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}
.shareBtn {
  position: absolute;
  left:0;
  top:0;
  opacity: 0;
  width: 100%;
  height: 128rpx;
}