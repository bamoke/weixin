/* pages/event/list/index.wxss */
.m-event-list .item {
  padding:24rpx;
  border-bottom:1px solid #f1f1f1;
}
.m-event-list .item .thumb-box {
  position: relative;
    width:100%;
  height:320rpx;
  border-radius:3px;
  overflow: hidden;
}
.m-event-list .item .thumb-box .stage {
  position: absolute;
  left:-64rpx;
  top:8rpx;
  z-index:1;
  width:192rpx;
  height:48rpx;
  line-height: 48rpx;
  text-align: center;
  color:#fff;
  transform:rotate(-45deg);
  font-size:22rpx;
}
.m-event-list .item .thumb-box .stage-2 {
  background:#25b87b;
}
.m-event-list .item .thumb-box .stage-0 {
  background:#fa4b4b;
}
.m-event-list .item .thumb-box .stage-1 {
  background:#1b81d3;
}
.m-event-list .item .thumb {
  width:100%;
  height:320rpx;
}
.m-event-list .item .title {
  margin:12rpx 0;
  font-size:32rpx;
}
.m-event-list .item .foot-info {
  font-size:22rpx;
  color:#9c9c9c;
}