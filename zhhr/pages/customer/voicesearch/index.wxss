page {
  height: 100%;
}

.container {
  height: 100%;
  background: #f8f8f8;
  padding: 24rpx;
}

.answer-list {
}

.ask {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  font-size: 28rpx;
  color:#fff;
  background:#1296db;
  margin-bottom:24rpx;
  border-radius:4px;
}
.ask .icon {
  flex:0 0 content;
  width:32rpx;
  height:32rpx;
}
.ask .text {
  padding:0 12rpx;
}
.answer-list .item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  font-size: 28rpx;
  background: #fff;
  border-radius: 4px;
  line-height: 1.8;
}
.answer-list .bar {
  padding:24rpx 0;
}
