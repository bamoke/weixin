/**index.wxss**/
@import "../encommon.wxss"

page {
  height: 100%;
}

.g-top-wrap {
  position: relative;
  /* height:400rpx; */
  background-color: #1b4dc0;
  color: #fff;
  overflow: hidden;

}

.m-top-bar {
  padding: 0 24rpx;
  font-size: 24rpx;
}

.m-banner-wrap {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.banner-bg {
  margin-left: -25%;
  width: 150%;
  height: 200rpx;
  background-color: #1b4dc0;
  border-radius: 0 0 50% 50%/0 0 80% 80%;
}

.index-banner {
  position: absolute;
  left: 0;
  top: 0;
  padding: 24rpx;
  box-sizing: border-box;
  width: 100%;
  height: 400rpx;
}

.index-banner .img {
  width: 100%;
  height: 400rpx;
}

.container {
  /* background-color: #f4f4f4; */
  height: 100%;
}

.m-nav-wrap {
  padding: 24rpx;
}

.m-index-subnav-en {
  display: flex;
  flex-wrap: wrap;
}

.m-index-subnav-en .item {
  position: relative;
  flex: 1 0 auto;
  width: 33.3%;
  height: 234rpx;
  overflow: hidden;
}

.m-index-subnav-en .item:first-child {
  width: 66.6%;
}

.m-index-subnav-en .item .thumb {
  height: 234rpx;
}

.m-index-subnav-en .item .img {
  width: 100%;
  height: 234rpx;
}

.m-index-subnav-en .item .name {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  padding: 12rpx;
  background-color: rgba(0, 0, 0, .5);
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
}



.g-card>.header {
  padding-top: 48rpx;
  border: none;
}

.g-card>.header>.title-en {
  display: block;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  color: #232323;
  font-weight: 500;
  text-align: center;
}

.g-card>.header>.title-en::after {
  display: block;
  content: "";
  margin: 12rpx auto 0;
  width: 120rpx;
  height: 12rpx;
  line-height: 1;
  background: #1b81d3;
  border-radius: 4rpx;
}

.g-card>.body {
  padding: 24rpx;
}


.m-article-list-sm .other .txt {
  margin-left: 8rpx;
}