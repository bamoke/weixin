/* pages/talent/index/index.wxss */
.m-card-wrap {
  padding:48rpx;
}
.m-card-box {
  position: relative;
  margin-bottom:64rpx;

  height:400rpx;
  background:#0c325b;
  color:#fff;
  border-radius:12rpx;
  box-shadow: 0 10rpx 10rpx rgba(0,0,0,.3);
  overflow: hidden;
}
.m-card-box .bg {
  position: absolute;
  left:0;
  top:0;
  z-index:0;
  width:100%;
}
.m-card-box .content {
  position:absolute;
  left:0;
  top:0;
  width:100%;
  z-index:2;
  padding:48rpx 24rpx;
}
.m-card-box .title {
  margin-top:128rpx;
  font-size:48rpx;
  text-align: center;
  line-height: 1;
}
.m-card-box .no {
  margin-top:96rpx;
  font-size:32rpx;
}
.dealine {text-align: center;color:#9c9c9c;}
.m-tips {
  padding:48rpx;
  color:#9c9c9c;
}
.m-tips .bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom:24rpx;
  text-align: center;
}
.m-tips .bar .caption {
  font-size:28rpx;
  line-height:1;
  color: #6c6c6c;
}
.m-tips .bar::after {
  content:"";
  margin-top:12rpx;
  display: block;
  width:80rpx;
  height:4px;
  background-color:#666;
  line-height:1;
}
.m-tips .p {
  margin-bottom:12rpx;
  line-height: 1.5;
}

.m-reapply .tips {
  margin-bottom:24rpx;
  text-align: center;
  font-size:32rpx;
}