/* pages/talent/form/index.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
  background: #fff;
}



.m-form-default {
  display: block;
  margin-top: 24rpx;
  padding-bottom:48rpx;
  background: #fff;
}

.img-list-wrap {
  display: flex;
  width: 100%;
  padding: 48rpx 0;
}

.img-list-wrap .img {
  box-sizing: border-box;
  padding:12rpx;
  width: 192rpx;
  height: 192rpx;
  border-radius: 12rpx;
  border:1px solid #f1f1f1;
}

.img-list-wrap .add-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 192rpx;
  height: 192rpx;
  background-color: #f1f1f1;
  border-radius: 12rpx;
}

.img-list-wrap .add-btn .img {
  width: 96rpx;
  height: 96rpx;
  filter: grayscale(100);
  opacity: 0.2;
  border: 0;
}



.img-list-wrap .item {
  margin-right:24rpx;
  width: 192rpx;
  text-align: center;
  overflow: hidden;
}

.img-list-wrap .item .delete-btn {
  font-size: 26rpx;
  background: #f1f1f1;
}

.img-tips-text {
  font-size: 24rpx;
  color: #9c9c9c;
}

.no-flex {
  display: block !important;
}
.policy-box {
  font-size:24rpx;
  color:#969696;
}
.policy-box .link {
  display: inline-block;
  color:#696969;
}
