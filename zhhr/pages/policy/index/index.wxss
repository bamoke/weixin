/* pages/policy/index/index.wxss */
.top-tab {
  display: flex;
  align-items: center;
}
.top-tab .item {
  width:50%;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  border-bottom: 2px solid #e8e8e8;
  font-weight: bold;
}
.top-tab .active {
  color:#1b81d3;
  border-color:#1b81d3;
}
.m-nav-list-icon {
  width: 100%;
}

.m-nav-list-icon .item {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  background: #fff;
  border-bottom: 1px solid #f1f1f1;
  box-sizing: border-box;
}

.m-nav-list-icon .item .lf {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.m-nav-list-icon .item .title {
  width: 100%;
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  padding-right:24rpx;
  height: 112rpx;
  line-height: 1;
  font-size: 32rpx;
  overflow: hidden;
}
.m-nav-list-icon .item .title .desc {
  font-size:24rpx;
  color:#9c9c9c;
  line-height: 1.2;
}

