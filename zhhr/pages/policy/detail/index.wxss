/* pages/policy/detail/index.wxss */
.m-detail-wrap {
  width:100%;
  box-sizing: border-box;
  padding:48rpx 24rpx;
  margin-bottom:24rpx;
  background:#fff;
  overflow: hidden;
}
.content {padding-bottom:48rpx;width:100%;overflow: hidden;line-height:1.5;}
.content image {max-width:100%;}
.m-detail-wrap .title {
  font-size:40rpx;
  /* color:#366bcb; */
  font-weight: bold;
  text-align: center;
}
.m-detail-wrap .total {
  display: flex;
  justify-content: center;
  margin:24rpx 0 48rpx;
  padding-bottom:12rpx;
  width:100%;
  font-size:24rpx;
  color:#939393;
  text-align: center;
  border-bottom:1px solid #f1f1f1;
}
.m-detail-wrap .total .view {
  margin-right:24rpx;
}
.m-video-box {
  margin-bottom:48rpx;
  width:100%;
}
.m-video-box video {
  width:100%;
}
.m-end {
  position: relative;
  margin:48rpx 0;
  width:100%;
  height: 20rpx;
  border-bottom:1px solid #f1f1f1;
  text-align: center;
}
.m-end .tips {
  position: absolute;
  left:50%;
  top:0;
  margin-left: -50rpx;
  margin-top:-30rpx;
  z-index: 1;
  width:100rpx;
  height:100rpx;
  line-height: 100rpx;
  border:1px solid #f1f1f1;
  color:#ccc;
  border-radius: 50%;
  background:#f8f8f8;
}
.detail-thumb {
  margin-bottom: 48rpx;
  width:100%;
  height:400rpx;
}

.m-file-box {
  width:100%;
  padding:100rpx 0;
  color:#fff;
}
.m-file-box .view-btn {
  border:1px solid #fff;
  margin-left:25%;
  width:50%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size:32rpx;
}
.m-file-box .view-btn .icon {
  display: inline-block;
  margin-right: 12rpx;
  width:48rpx;
  height:48rpx;
  vertical-align: middle;
}
.m-file-box .view-btn .txt {
  display: inline-block;
  vertical-align: middle;
}