/* pages/home/coupon/index.wxss */
page {
  height:100%;
}
.container {
  height:100%;
  background:#f4f4f4;
}
.m-coupon-list {
  width:100%;
  padding:24rpx;
}
.m-coupon-list .item {
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom:48rpx;
  padding:24rpx;
  background:#fff;
  /* box-shadow:0 8rpx 4px rgba(0,0,0,.1); */
  overflow: hidden;
}
.m-coupon-list .item .icon {
  position: absolute;
  top:50%;
  margin-top:-18rpx;
  width:36rpx;
  height:36rpx;
  border-radius: 50%;
  background:#f4f4f4;
  z-index:9;
}
.m-coupon-list .item .icon-left {
  left:-18rpx;
}
.m-coupon-list .item .icon-right {
  right:-18rpx;
}
.m-coupon-list .item .value-box {
  flex:0 width;
  width:180rpx;
  color:#f00;
}
.m-coupon-list .item .value-box .value {
  font-size:64rpx;
  font-weight: 500;
}
.m-coupon-list .overdue-bar {
  position:absolute;
  right:-40rpx;
  top:40rpx;
  z-index:1;
  width:300rpx;
  height:60rpx;
  line-height:60rpx;
  background:#666;
  color:#fff;
  text-align: center;
  transform-origin:center center;
  transform:rotate(45deg);
}
.m-coupon-list .desc {
  flex:0 width;
  width:340rpx;
  line-height: 1.5;
}
.m-coupon-list .desc .title {
  margin-bottom:12rpx;
  font-size:34rpx;
}
.m-coupon-list .desc  .addr {
  width:100%;
  text-overflow: ellipsis;
  overflow:hidden;
  white-space:nowrap;
}
.m-coupon-list .unusable-item .value-box {color:#999;}
.m-coupon-list .unusable-item .desc {color:#999;}
.m-coupon-list .item .right-box {
  flex:1 0;
  padding-left:24rpx;
  width:100%;
}
.use-btn {
  width:100%;
  height:64rpx;
  line-height: 64rpx;
  color:#fff;
  background:#fa4b4b;
  border-radius:8rpx;
  text-align: center;
  font-size:24rpx;
}
.unusable {
  position: absolute;
  top:-12rpx;
  right:-12rpx;
  padding:12rpx;
  width:168rpx;
  height:168rpx;
  border-radius: 50%;
  border:2px solid #ddd;
  z-index: 10;
}
.unusable .txt {
  width:100%;
  text-align: center;
  margin-top:40rpx;
  height:64rpx;
  line-height: 64rpx;
  border-top:1px solid #ddd;
  border-bottom:1px solid #ddd;
  color:#ddd;
  transform: rotate(30deg);
}