/**index.wxss**/

page {
  height: 100%;
}
.m-index-banner-box {
  height:400rpx;
}
.index-banner {
  height:400rpx;
}
.index-banner .img {
  width:100%;
  height: 400rpx;
}
.container {
  /* background-color: #f4f4f4; */
  height: 100%;
}
.m-index-nav-wrap {
  height: 124rpx;
  padding:0 24rpx;
  background:#f4f4f4;
}
.m-index-subnav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position:relative;
  width: 100%;
  height:200rpx;
  background: #fff;
  border-radius:4px;
  transform: translateY(-100rpx);
  box-shadow:0 2px 4px rgba(0,0,0,.1);
}

.m-index-subnav .item {
  flex-grow: 1;
  display: flex;
  flex-direction:column;
  align-items: center;
  text-align: center;
  width: 33.3%;
  border-right: 1px solid #f1f1f1;
  overflow: hidden;
}
.m-index-subnav .item .icon-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom:12rpx;
  width:96rpx;
  height:96rpx;
  border-radius:3px;
}
.m-index-subnav .last {
  border-right: none;
}


.m-index-subnav .item .icon {
  width: 56rpx;
  height: 56rpx;
}


