/**app.wxss**/
@import "./weui.wxss"

view {
  box-sizing:border-box;
}

.container {
  min-height: 100%;
  box-sizing: border-box;
  font-size: 26rpx;
}

.g-box-pad {
  padding: 24rpx;
}

.g-row {
  display: flex;
  width: 100%;
}

.g-row-default {
  display: flex;
  padding: 0 24rpx;
}
.row-bt {
  justify-content: space-between;
}

.row-align-center {
  align-items: center;
}

.g-card {
  box-sizing: border-box;
  width: 100%;
  background: #fff;
}

.g-card>.header {
  padding: 24rpx 24rpx 12rpx;
  border-bottom: 2px solid #f1f1f1;
}

.g-card>.header>.title {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  color: #232323;
  vertical-align: middle;
  font-weight: 500;
}

.g-card>.header>.title::before {
  display: inline-block;
  margin-right: 12rpx;
  content: "";
  margin-top: -2rpx;
  width: 8rpx;
  height: 28rpx;
  line-height: 1;
  background: #1b81d3;
  border-radius: 4rpx;
  vertical-align: middle;
}

.g-card>.body {
  box-sizing: border-box;
}



/**module**/

.m-top-search-primary {
  padding: 12rpx 24rpx 24rpx;
  background: #1b81d3;
  color: #fff;
}

.m-top-search-primary .search-bg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 24rpx;
  height: 64rpx;
  border-radius: 6rpx;
  background-color: rgba(0, 0, 0, .1);
  font-size: 24rpx;
}

.m-top-search-primary .icon {
  margin-right: 12rpx;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.m-top-search-primary .input-box {
  padding: 0 12rpx;
  width: 80%;
  flex-shrink: 1;
}

.m-card-list {
  width: 100%;
}

.m-card-list .item-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1px solid #f1f1f1;
}

.m-card-list .text-wrap {
  width: 50%;
  /* flex-shrink: 1; */
  flex-grow: 1;
  padding: 0 24rpx;
}

.m-card-list .avatar {
  flex-shrink: 0;
  flex-grow: 0;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 1px solid #f1f1f1;
}

.m-card-list .name {
  font-size: 32rpx;
}

.m-card-list .item-wrap .other {
  margin-top: 8rpx;
  color: #686868;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.m-tips-page {
  padding-top: 120rpx;
  align-items: center;
  width: 100%;
  height: 100%;
  text-align: center;
}

.m-tips-page .icon {
  width: 180rpx;
  height: 180rpx;
  opacity: 0.1;
}

.m-tips-page .tips {
  margin: 20rpx 0 80rpx;
  font-size: 34rpx;
}

.m-paging-wrap {}

.m-paging-wrap .row {
  padding: 40rpx 0;
  text-align: center;
}

.m-paging-wrap .no-more {
  color: #ccc;
  background: #f7f7f7;
}


.tips-page-empty .tips {
  color: #9c9c9c;
}

.tips-page-success .tips {
  color: #3c0;
}

.m-article-list-big .item {
  padding: 24rpx;
  border-bottom: 1px solid #f1f1f1;
}

.m-article-list-big .title {
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.m-article-list-big .thumb {
  margin: 12rpx 0;
  width: 100%;
  height: 240rpx;
  border-radius: 3px;
}

.m-article-list-big .other {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.m-article-list-big .other .cate {
  font-size: 22rpx;
  border: 1px solid #1b81d3;
  color: #1b81d3;
  padding: 0 12rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
}

.m-article-list-big .other .icon {
  opacity: .3;
  filter: grayscale(100);
}

.m-article-list-big .other .txt {
  display: inline-block;
  vertical-align: middle;
  color: #9c9c9c;
  font-size: 22rpx;
}




.m-article-list-sm .item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f1f1f1;
  box-sizing: border-box;
  padding: 24rpx 0;
}

.m-article-list-sm .title {
  font-size: 30rpx;
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
}

.m-article-list-sm .info {
  flex-shrink: 1;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  /* height: 160rpx; */
  padding-right: 24rpx;
}

.m-article-list-sm .thumb {
  flex: 0 0 auto;
  width: 234rpx;
  height: 180rpx;
}

.m-article-list-sm .other {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.m-article-list-sm .other .cate {
  font-size: 22rpx;
  border: 1px solid #1b81d3;
  color: #1b81d3;
  padding: 0 12rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
}

.m-article-list-sm .other .icon {
  opacity: .3;
  filter: grayscale(100);
}

.m-article-list-sm .other .txt {
  display: inline-block;
  vertical-align: middle;
  color: #9c9c9c;
  font-size: 22rpx;
  line-height: 1;
}



.m-form-default {
  width: 100%;
}

.m-form-default .form-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx;
  border-bottom: 1px solid #f1f1f1;
  font-size: 30rpx;
}

.m-form-default .form-group:last-child {
  border: none;
}

.m-form-default .form-group .label {
  flex: 0 width;
  width: 120rpx;
  white-space: nowrap;
  color: #232323;
}

.m-form-default .form-group .value-box {
  flex: 1 auto;
  text-align: right;
  width: 70%;
}

.m-form-default .form-group .value-box {
  text-align: right;
}

.m-form-default .textarea {
  box-sizing: border-box;
  width: 100%;
}

.m-subpage-banner {
  position: relative;
  width: 100%;
  height: 320rpx;
  /* background: #000; */
}

.m-subpage-banner .info {
  position: absolute;
  left: 0;
  top: 80rpx;
  z-index: 1;
  width: 100%;
  color: #fff;
  text-align: center;
}

.m-subpage-banner .info .title {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-bottom: 24rpx;
  font-size: 48rpx;
  border: 1px solid #fff;
  font-weight: bold;
}

.m-subpage-banner .info .desc {
  font-size: 32rpx;
  text-align: center;
}

.m-subpage-banner .img {
  width: 100%;
  height: 320rpx;
  /* opacity: 0.6; */
}

/***util***/
.u-nomore {
  padding: 48rpx 0;
  background: #f8f8f8;
  text-align: center;
  font-size: 22rpx;
  color: #9c9c9c;
}

.u-ht {
  height: 24rpx;
  background: #f4f4f4;
}

.ht-border {
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
}

.u-myicon {
  display: inline-block;
  margin-right: 6rpx;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  opacity: 0.5;
}

.myicon-big {
  width: 48rpx;
  height: 48rpx;
}

