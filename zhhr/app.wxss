.m-empty-box {
  box-sizing: border-box;
  color: #8c8c8c;
  padding: 96rpx 40rpx;
  width: 100%;
  text-align: center;
  background: #fff;
}

.m-empty-box .tips {
  margin: 48rpx 0;
  font-size: 30rpx;
  color: #ccc;
}

.m-empty-box .icon {
  width: 168rpx;
  height: 168rpx;
  opacity: .1;
}