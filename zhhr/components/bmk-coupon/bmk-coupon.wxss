/* components/bmk-coupon/bamk-coupon.wxss */
.m-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6)
}

.main-content {
  position: fixed;
  left: 0;
  bottom: 0;
  transform: translate(0, 100%);
  backface-visibility: hidden;
  z-index: 5000;
  width: 100%;
  background-color: #EAE7E8;
  transition: transform .3s;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  overflow: hidden
}

.content-show {
  transform: translate(0, 0)
}

.weui-mask.weui-mask_hidden {
  opacity: 0;
  transform: scale3d(1, 1, 0)
}

.title {
  position: relative;
  height: 56px;
  padding: 0 24px;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.5);
  line-height: 1.4;
  background: #FFFFFF
}
.m-coupon-list {
  background:#fff;
  border-bottom:1px solid #f4f4f4;
}
.m-coupon-list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:24rpx;
  border-top:1px solid #f4f4f4;
}
.value-box {
  flex:0 0 auto;
  width:240rpx;
  color:#fa4b4b;
  font-weight: 500;
}
.value-box .value{
  font-size:56rpx;
}
.item .info {
  flex:1 1 auto;
  width:100%;
  color:#999;
}
.item .operation {
  flex:0 0 auto;
  width: 120rpx;
  text-align: center;
}
.close-btn {
  height:80rpx;
  line-height: 80rpx;
  font-size:32rpx;
  text-align: center;
  background: #fff;
}
.coupon-btn{
  width:100%;
  height:64rpx;
  line-height: 64rpx;
  color:#fff;
  background:#fa4b4b;
  border-radius: 8rpx;
  text-align: center;
  font-weight: 500;
}
.disrecive .value-box,.disrecive-text{
  color:#999
}