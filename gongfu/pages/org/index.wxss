/* pages/org/index.wxss */
.m-top-info {
  padding:48rpx 24rpx;
  background:#121212;
  color:#fff;
  text-align: center;
}
.m-top-info .logo {
  margin-bottom:24rpx;
  width:160rpx;
  height:160rpx;
  border-radius:50%;
}
.m-top-info .name {
  font-size:32rpx;
}
.m-other {
  background:#fff;
}
.m-other .item {
  display: flex;
  align-items: center;
  padding:24rpx;
  font-size:28rpx;
  border-bottom:1px solid #f1f1f1;
  color:#232323;
} 
.m-other .item .caption {margin-left:12rpx;}
.btn-small {
  font-size:28rpx;
  padding:12rpx 12rpx;
  width: auto;
  height:auto;
  line-height: 1;
  white-space: nowrap;
}
.right-box {
  flex:0 0 auto;
  width: auto;
}