/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background:#eee;
}
.m-top-nav {
  width:100%;
  background:#4ea9f2;
  font-size:32rpx;
}
.m-top-nav .content {
  display: flex;
  justify-content: space-between;
  
}
.m-top-nav .item {
   /* flex-shrink: 0;  */
   flex-grow:1;
  box-sizing: border-box;
  /* width:100rpx; */
  height:76rpx;
  line-height:76rpx;
  border-bottom:2px solid #4ea9f2;
  text-align: center;
  color:#fff;
  opacity:.7;
  font-weight:bold;
}
.m-top-nav .active {
  opacity:1;
  border-bottom:2px solid #fff;
}

.g-wrap-main {
  margin-bottom:24rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 24rpx;
  background:#fff;
}

.g-row-bt {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.m-bar-default {
  padding: 24rpx 0;
  border-bottom: 2px solid #f1f1f1;
}

.m-bar-default .title {
  color: #4ea9f2;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}
.m-index-banner {
  width:100%;
  height:320rpx;
}
.m-index-banner .img {
  width:100%;
  height:320rpx;
}
.m-pic-list {
  width: 100%;
}

.m-pic-list .item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1px solid #f1f1f1;
}

.m-pic-list .big-item {
  display: block;
}

.m-pic-list .item .lf {
  padding-right: 24rpx;
  box-sizing: border-box;
  width: 60%;
}

.m-pic-list .item .img-box {
  width: 250rpx;
  height: 150rpx;
  overflow: hidden;
}

.m-pic-list .big-item .img-box {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.m-pic-list .img-box img {
  width: 100%;
}

.m-pic-list .title {
  font-size: 30rpx;
  font-weight: normal;
  line-height: 1.4;
  color:#3c3c3c;
}

.m-pic-list .foot-info {
  margin-top: 24rpx;
  color: #939393;
  font-size: 24rpx;
}

.m-pic-list .foot-info .category {
  margin-right: 24rpx;
  display: inline-block;
  padding: 0 12rpx;
  border: 1px solid #939393;
  border-radius: 6rpx;
}

.m-pic-list .foot-info .view {
  display: inline-block;
}
.m-search-box {
  width: 100%;
  box-sizing: border-box;
  padding:24rpx;
  background:#fff;
}
.search-bar {
  display: flex;
  justify-content: space-between;
  align-items:center;
  padding:0 24rpx;
  height:64rpx;
  border:2px solid #eee;
  border-radius:32rpx;
  font-size:28rpx;
  background-color:#f1f1f1;
}
.search-bar .icon {
  width:48rpx;
  height:48rpx;
  background-image:url("http://www.zhmlife.com/Uploads/search-icon.png");
  background-repeat:no-repeat;
  background-size:48rpx auto;
  background-position: center;
  opacity: .3;
}
.u-more {
  padding-bottom: 24rpx;
  box-sizing: border-box;
  width: 100%;
  font-size: 28rpx;
  color: #939393;
}

.u-more .btn {
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  background: #fff;
  text-align: center;
}

.u-more .loading-icon {
  width: 100%;
  height: 64rpx;
  text-align: center;
}

.u-nomore {
  position: relative;
  width: 100%;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  color: #ccc;
  text-align: center;
}
.m-empty-box {
  padding:48rpx 0;
  text-align: center;
  color:#9c9c9c;
  font-size:28rpx;
}