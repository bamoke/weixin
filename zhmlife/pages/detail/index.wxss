/* pages/detail/index.wxss */
.m-detail-wrap {
  width:100%;
  box-sizing: border-box;
  padding:48rpx 24rpx;
  margin-bottom:24rpx;
  background:#fff;
  overflow: hidden;
}
.content {width:100%;overflow: hidden;}
.m-detail-wrap .title {
  font-size:40rpx;
  color:#366bcb;
  font-weight: bold;
}
.m-detail-wrap .total {
  display: flex;
  justify-content: center;
  margin:24rpx 0 48rpx;
  padding-bottom:12rpx;
  width:100%;
  font-size:24rpx;
  color:#939393;
  text-align: center;
  border-bottom:1px solid #f1f1f1;
}
.m-detail-wrap .total .view {
  margin-right:24rpx;
}
.m-video-box {
  margin-bottom:48rpx;
  width:100%;
}
.m-video-box video {
  width:100%;
}